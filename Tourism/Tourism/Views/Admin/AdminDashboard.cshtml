@using Tourism.ViewModel
@model AdminDashboardViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #6a1b9a;
            --primary-light: #9c4dcc;
            --primary-dark: #38006b;
            --secondary: #4a148c;
            --accent: #ff4081;
            --ecommerce: #1e88e5;
            --restaurant: #f57c00;
            --hotel: #7b1fa2;
            --tourguide: #00897b;
            --text-dark: #2d3748;
            --text-light: #718096;
            --bg-light: #f7fafc;
            --card-shadow: 0 8px 20px -5px rgba(0, 0, 0, 0.1);
            --hover-shadow: 0 15px 35px -10px rgba(0, 0, 0, 0.2);
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
            color: var(--text-dark);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            padding-bottom: 50px;
        }

        .admin-header {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            color: white;
            padding: 60px 0 70px;
            margin-bottom: 50px;
            position: relative;
            overflow: hidden;
        }

            .admin-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 20% 50%, rgba(106, 27, 154, 0.15) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(30, 136, 229, 0.15) 0%, transparent 50%), url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
                opacity: 0.4;
            }

            .admin-header::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 100px;
                background: linear-gradient(to bottom, transparent, rgba(247, 250, 252, 0.1));
            }

        .header-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            padding: 8px 20px;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            margin-bottom: 20px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

            .header-badge i {
                font-size: 1rem;
            }

        .header-title {
            font-weight: 800;
            font-size: 3.5rem;
            margin-bottom: 15px;
            line-height: 1.1;
            letter-spacing: -1px;
            background: linear-gradient(135deg, #ffffff 0%, #e0e7ff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 35px;
            font-weight: 400;
            color: #d1d5db;
        }

        .header-stats {
            display: flex;
            gap: 40px;
            flex-wrap: wrap;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 15px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 15px 25px;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            transition: all 0.3s ease;
        }

            .stat-item:hover {
                background: rgba(255, 255, 255, 0.15);
                transform: translateY(-2px);
            }

            .stat-item i {
                font-size: 2rem;
                opacity: 0.8;
            }

        .stat-number {
            font-size: 1.8rem;
            font-weight: 700;
            line-height: 1;
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 0.85rem;
            opacity: 0.8;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .header-illustration {
            position: relative;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .illustration-circle {
            position: absolute;
            border-radius: 50%;
            border: 2px solid rgba(255, 255, 255, 0.1);
            animation: pulse 3s ease-in-out infinite;
        }

        .circle-1 {
            width: 280px;
            height: 280px;
            animation-delay: 0s;
        }

        .circle-2 {
            width: 200px;
            height: 200px;
            animation-delay: 0.5s;
            border-color: rgba(106, 27, 154, 0.3);
        }

        .circle-3 {
            width: 120px;
            height: 120px;
            animation-delay: 1s;
            border-color: rgba(30, 136, 229, 0.3);
        }

        .illustration-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: white;
            box-shadow: 0 20px 60px rgba(106, 27, 154, 0.4);
            z-index: 1;
            animation: float 3s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
            opacity: 0.5;
        }

        50% {
            transform: scale(1.05);
            opacity: 0.8;
        }

        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }

        }

        .provider-section {
            margin-bottom: 60px;
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: var(--card-shadow);
            position: relative;
            overflow: hidden;
        }

            .provider-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 6px;
            }

            .provider-section.ecommerce::before {
                background: linear-gradient(90deg, var(--ecommerce) 0%, #42a5f5 100%);
            }

            .provider-section.restaurant::before {
                background: linear-gradient(90deg, var(--restaurant) 0%, #ff9800 100%);
            }

            .provider-section.hotel::before {
                background: linear-gradient(90deg, var(--hotel) 0%, #9c27b0 100%);
            }

            .provider-section.tourguide::before {
                background: linear-gradient(90deg, var(--tourguide) 0%, #26a69a 100%);
            }

        .section-header {
            display: flex;
            align-items: center;
            margin-bottom: 35px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .section-icon {
            width: 70px;
            height: 70px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            margin-right: 20px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .ecommerce .section-icon {
            background: linear-gradient(135deg, var(--ecommerce) 0%, #1565c0 100%);
        }

        .restaurant .section-icon {
            background: linear-gradient(135deg, var(--restaurant) 0%, #e65100 100%);
        }

        .hotel .section-icon {
            background: linear-gradient(135deg, var(--hotel) 0%, #6a1b9a 100%);
        }

        .tourguide .section-icon {
            background: linear-gradient(135deg, var(--tourguide) 0%, #00695c 100%);
        }

        .section-info h2 {
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
            color: var(--text-dark);
        }

        .section-info p {
            margin: 0;
            color: var(--text-light);
            font-size: 1.05rem;
        }

        .action-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border-radius: 16px;
            padding: 30px;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            height: 100%;
            display: flex;
            flex-direction: column;
            text-decoration: none;
            color: inherit;
            position: relative;
            overflow: hidden;
        }

            .action-card::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 4px;
                transform: scaleX(0);
                transition: transform 0.3s ease;
            }

        .ecommerce .action-card::after {
            background: var(--ecommerce);
        }

        .restaurant .action-card::after {
            background: var(--restaurant);
        }

        .hotel .action-card::after {
            background: var(--hotel);
        }

        .tourguide .action-card::after {
            background: var(--tourguide);
        }

        .action-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--hover-shadow);
        }

            .action-card:hover::after {
                transform: scaleX(1);
            }

        .ecommerce .action-card:hover {
            border-color: var(--ecommerce);
        }

        .restaurant .action-card:hover {
            border-color: var(--restaurant);
        }

        .hotel .action-card:hover {
            border-color: var(--hotel);
        }

        .tourguide .action-card:hover {
            border-color: var(--tourguide);
        }

        .card-icon-small {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.6rem;
            color: white;
            margin-bottom: 20px;
        }

        .ecommerce .card-icon-small {
            background: linear-gradient(135deg, var(--ecommerce) 0%, #1565c0 100%);
        }

        .restaurant .card-icon-small {
            background: linear-gradient(135deg, var(--restaurant) 0%, #e65100 100%);
        }

        .hotel .card-icon-small {
            background: linear-gradient(135deg, var(--hotel) 0%, #6a1b9a 100%);
        }

        .tourguide .card-icon-small {
            background: linear-gradient(135deg, var(--tourguide) 0%, #00695c 100%);
        }

        .action-card h5 {
            font-weight: 700;
            font-size: 1.25rem;
            margin-bottom: 10px;
            color: var(--text-dark);
        }

        .action-card p {
            color: var(--text-light);
            margin-bottom: 20px;
            flex-grow: 1;
            font-size: 0.95rem;
        }

        .card-footer-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: auto;
            padding-top: 15px;
            border-top: 1px solid #e0e0e0;
        }

        .count-badge {
            font-size: 1.8rem;
            font-weight: 800;
            display: flex;
            align-items: center;
        }

        .ecommerce .count-badge {
            color: var(--ecommerce);
        }

        .restaurant .count-badge {
            color: var(--restaurant);
        }

        .hotel .count-badge {
            color: var(--hotel);
        }

        .tourguide .count-badge {
            color: var(--tourguide);
        }

        .pending-badge {
            background: var(--accent);
            color: white;
            border-radius: 20px;
            padding: 4px 12px;
            font-size: 0.85rem;
            font-weight: 600;
            box-shadow: 0 3px 8px rgba(255, 64, 129, 0.3);
        }

        .action-link {
            font-weight: 600;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            margin-top: 10px;
            transition: all 0.2s ease;
        }

        .ecommerce .action-link {
            color: var(--ecommerce);
        }

        .restaurant .action-link {
            color: var(--restaurant);
        }

        .hotel .action-link {
            color: var(--hotel);
        }

        .tourguide .action-link {
            color: var(--tourguide);
        }

        .action-link i {
            margin-left: 6px;
            transition: transform 0.2s ease;
        }

        .action-card:hover .action-link i {
            transform: translateX(5px);
        }

        .stats-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(255, 64, 129, 0.1);
            color: var(--accent);
            border-radius: 8px;
            padding: 6px 12px;
            font-size: 0.8rem;
            font-weight: 700;
        }

        @@media (max-width: 768px) {
            .header-title

        {
            font-size: 2.5rem;
        }

        .header-stats {
            gap: 15px;
        }

        .stat-item {
            padding: 12px 20px;
        }

        .stat-number {
            font-size: 1.5rem;
        }

        .provider-section {
            padding: 25px;
        }

        .section-header {
            flex-direction: column;
            text-align: center;
        }

        .section-icon {
            margin-right: 0;
            margin-bottom: 15px;
        }

        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <div class="admin-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="header-badge">
                        <i class="fas fa-shield-alt"></i>
                        <span>Administrator Access</span>
                    </div>
                    <h1 class="header-title">Control Center</h1>
                    <p class="header-subtitle">Comprehensive platform management and provider oversight</p>
                    <div class="header-stats">
                        <div class="stat-item">
                            <i class="fas fa-users"></i>
                            <div>
                                <div class="stat-number">@(Model.touristsCount + Model.merchantsCount + Model.hotelsCount + Model.restaurantsCount + Model.tourGuidesCount)</div>
                                <div class="stat-label">Total Users</div>
                            </div>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-clock"></i>
                            <div>
                                <div class="stat-number">27</div>
                                <div class="stat-label">Pending Requests</div>
                            </div>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-chart-line"></i>
                            <div>
                                <div class="stat-number">94%</div>
                                <div class="stat-label">System Health</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 d-none d-lg-block">
                    <div class="header-illustration">
                        <div class="illustration-circle circle-1"></div>
                        <div class="illustration-circle circle-2"></div>
                        <div class="illustration-circle circle-3"></div>
                        <div class="illustration-icon">
                            <i class="fas fa-cogs"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class="container">

        <!-- E-commerce Section -->
        <div class="provider-section ecommerce">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="section-info">
                    <h2>E-commerce Providers</h2>
                    <p>Manage merchants and online stores</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <a class="action-card" asp-action="VerificationRequests" asp-controller="Admin" asp-route-type="Merchant">
                        <div class="card-icon-small">
                            <i class="fas fa-user-check"></i>
                        </div>
                        <h5>Verification Requests</h5>
                        <p>Review and approve merchant verification requests</p>
                        <div class="card-footer-info">
                            <div class="count-badge">@Model.merchantsCount</div>
                            <div class="pending-badge">5 Pending</div>
                        </div>
                        <span class="action-link">Review Now <i class="fas fa-arrow-right"></i></span>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <a class="action-card" asp-action="ServiceRequests" asp-controller="Admin" asp-route-type="Merchant">
                        <div class="card-icon-small">
                            <i class="fas fa-store"></i>
                        </div>
                        <h5>Service Requests</h5>
                        <p>Manage merchant service and feature requests</p>
                        <div class="card-footer-info">
                            <div class="count-badge">24</div>
                            <div class="pending-badge">9 Pending</div>
                        </div>
                        <span class="action-link">Manage <i class="fas fa-arrow-right"></i></span>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <a class="action-card" asp-controller="Admin" asp-action="ShowOrders">
                        <div class="card-icon-small">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <h5>Orders & Shipping</h5>
                        <p>Track and manage all e-commerce orders</p>
                        <div class="card-footer-info">
                            <div class="count-badge">32</div>
                            <div class="pending-badge">12 Active</div>
                        </div>
                        <span class="action-link">View Orders <i class="fas fa-arrow-right"></i></span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Restaurants Section -->
        <div class="provider-section restaurant">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <div class="section-info">
                    <h2>Restaurant Providers</h2>
                    <p>Manage restaurants and dining services</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-lg-6 col-md-6">
                    <a class="action-card" asp-action="VerificationRequests" asp-controller="Admin" asp-route-type="Restaurant">
                        <div class="card-icon-small">
                            <i class="fas fa-user-check"></i>
                        </div>
                        <h5>Verification Requests</h5>
                        <p>Review and approve restaurant verification requests</p>
                        <div class="card-footer-info">
                            <div class="count-badge">@Model.restaurantsCount</div>
                            <div class="pending-badge">2 Pending</div>
                        </div>
                        <span class="action-link">Review Now <i class="fas fa-arrow-right"></i></span>
                    </a>
                </div>
                <div class="col-lg-6 col-md-6">
                    <a class="action-card" asp-action="ServiceRequests" asp-controller="Admin" asp-route-type="Restaurant">
                        <div class="card-icon-small">
                            <i class="fas fa-concierge-bell"></i>
                        </div>
                        <h5>Service Requests</h5>
                        <p>Manage restaurant meal and booking requests</p>
                        <div class="card-footer-info">
                            <div class="count-badge">14</div>
                            <div class="pending-badge">6 Pending</div>
                        </div>
                        <span class="action-link">Manage <i class="fas fa-arrow-right"></i></span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Hotels Section -->
        <div class="provider-section hotel">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-hotel"></i>
                </div>
                <div class="section-info">
                    <h2>Hotel Providers</h2>
                    <p>Manage hotels and accommodations</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-lg-6 col-md-6">
                    <a class="action-card" asp-action="VerificationRequests" asp-controller="Admin" asp-route-type="Hotel">
                        <div class="card-icon-small">
                            <i class="fas fa-user-check"></i>
                        </div>
                        <h5>Verification Requests</h5>
                        <p>Review and approve hotel verification requests</p>
                        <div class="card-footer-info">
                            <div class="count-badge">@Model.hotelsCount</div>
                            <div class="pending-badge">3 Pending</div>
                        </div>
                        <span class="action-link">Review Now <i class="fas fa-arrow-right"></i></span>
                    </a>
                </div>
                <div class="col-lg-6 col-md-6">
                    <a class="action-card" asp-action="ServiceRequests" asp-controller="Admin" asp-route-type="Hotel">
                        <div class="card-icon-small">
                            <i class="fas fa-bed"></i>
                        </div>
                        <h5>Service Requests</h5>
                        <p>Manage hotel room and reservation requests</p>
                        <div class="card-footer-info">
                            <div class="count-badge">18</div>
                            <div class="pending-badge">4 Pending</div>
                        </div>
                        <span class="action-link">Manage <i class="fas fa-arrow-right"></i></span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Tour Guides Section -->
        <div class="provider-section tourguide">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <div class="section-info">
                    <h2>Tour Guide Providers</h2>
                    <p>Manage tour guides and trip services</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-lg-6 col-md-6">
                    <a class="action-card" href="#">
                        <div class="card-icon-small">
                            <i class="fas fa-user-check"></i>
                        </div>
                        <h5>Verification Requests</h5>
                        <p>Review and approve tour guide verification requests</p>
                        <div class="card-footer-info">
                            <div class="count-badge">@Model.tourGuidesCount</div>
                            <div class="pending-badge">7 Pending</div>
                        </div>
                        <span class="action-link">Review Now <i class="fas fa-arrow-right"></i></span>
                    </a>
                </div>
                <div class="col-lg-6 col-md-6">
                    <a class="action-card" href="#">
                        <div class="card-icon-small">
                            <i class="fas fa-route"></i>
                        </div>
                        <h5>Service Requests</h5>
                        <p>Manage tour and trip booking requests</p>
                        <div class="card-footer-info">
                            <div class="count-badge">21</div>
                            <div class="pending-badge">8 Pending</div>
                        </div>
                        <span class="action-link">Manage <i class="fas fa-arrow-right"></i></span>
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>