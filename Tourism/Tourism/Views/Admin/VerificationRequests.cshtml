@using Tourism.ViewModel
@model List<VerificationViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verification Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #6a1b9a;
            --primary-light: #9c4dcc;
            --primary-dark: #38006b;
            --success: #00897b;
            --success-dark: #00695c;
            --danger: #e53935;
            --danger-dark: #c62828;
            --info: #1e88e5;
            --info-dark: #1565c0;
            --text-dark: #2d3748;
            --text-light: #718096;
            --border-color: #e2e8f0;
            --bg-light: #f7fafc;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 40px 0;
            min-height: 100vh;
        }

        .table-container {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            margin: 0 auto;
            max-width: 1400px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 35px;
            padding-bottom: 25px;
            border-bottom: 3px solid transparent;
            border-image: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
            border-image-slice: 1;
        }

        .header-content {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            box-shadow: 0 8px 20px rgba(106, 27, 154, 0.3);
        }

        .header-text h1 {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--text-dark);
            margin: 0;
        }

        .header-text p {
            color: var(--text-light);
            margin: 5px 0 0 0;
            font-size: 1rem;
        }

        .status-badge {
            background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
            color: white;
            padding: 10px 24px;
            border-radius: 50px;
            font-size: 0.95rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 4px 12px rgba(106, 27, 154, 0.3);
        }

            .status-badge i {
                font-size: 1.1rem;
            }

        .verification-table {
            margin: 0;
            border: none;
            border-collapse: separate;
            border-spacing: 0 12px;
        }

            .verification-table thead {
                background: transparent;
            }

                .verification-table thead th {
                    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
                    color: white;
                    font-weight: 600;
                    text-transform: uppercase;
                    font-size: 0.85rem;
                    letter-spacing: 0.8px;
                    padding: 20px 24px;
                    border: none;
                    vertical-align: middle;
                }

                    .verification-table thead th:first-child {
                        border-radius: 14px 0 0 14px;
                    }

                    .verification-table thead th:last-child {
                        border-radius: 0 14px 14px 0;
                    }

            .verification-table tbody tr {
                background: white;
                transition: all 0.3s ease;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
                border-radius: 14px;
            }

                .verification-table tbody tr:hover {
                    transform: translateY(-4px);
                    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
                }

            .verification-table tbody td {
                padding: 24px;
                vertical-align: middle;
                color: var(--text-dark);
                font-size: 0.95rem;
                border: none;
                background: inherit;
            }

                .verification-table tbody td:first-child {
                    border-radius: 14px 0 0 14px;
                }

                .verification-table tbody td:last-child {
                    border-radius: 0 14px 14px 0;
                }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
            color: white;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            font-weight: 700;
            flex-shrink: 0;
        }

        .user-details {
            display: flex;
            flex-direction: column;
        }

        .user-name {
            font-weight: 600;
            color: var(--text-dark);
            font-size: 1.05rem;
        }

        .user-id {
            color: var(--text-light);
            font-size: 0.85rem;
            margin-top: 2px;
        }

        .email-info {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--text-dark);
            font-weight: 500;
        }

            .email-info i {
                color: var(--primary-light);
                font-size: 1.1rem;
            }

        .btn-custom {
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            cursor: pointer;
        }

        .btn-download {
            background: linear-gradient(135deg, var(--info) 0%, var(--info-dark) 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(30, 136, 229, 0.3);
        }

            .btn-download:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(30, 136, 229, 0.4);
                color: white;
            }

        .btn-accept {
            background: linear-gradient(135deg, var(--success) 0%, var(--success-dark) 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(0, 137, 123, 0.3);
        }

            .btn-accept:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(0, 137, 123, 0.4);
                color: white;
            }

        .btn-deny {
            background: linear-gradient(135deg, var(--danger) 0%, var(--danger-dark) 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(229, 57, 53, 0.3);
        }

            .btn-deny:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(229, 57, 53, 0.4);
                color: white;
            }

        .action-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: var(--text-light);
        }

        .empty-state-icon {
            width: 120px;
            height: 120px;
            background: var(--bg-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
        }

            .empty-state-icon i {
                font-size: 4rem;
                color: var(--border-color);
            }

        .empty-state h3 {
            color: var(--text-dark);
            margin-bottom: 15px;
            font-weight: 700;
            font-size: 1.8rem;
        }

        .empty-state p {
            font-size: 1.1rem;
        }

        @@media (max-width: 992px) {
            .table-container

        {
            padding: 25px;
            border-radius: 16px;
        }

        .page-header {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }

        .header-content {
            flex-direction: column;
        }

        .header-text h1 {
            font-size: 1.8rem;
        }

        }

        @@media (max-width: 768px) {
            .verification-table thead

        {
            display: none;
        }

        .verification-table tbody tr {
            display: block;
            margin-bottom: 20px;
            border-radius: 14px;
        }

        .verification-table tbody td {
            display: block;
            padding: 15px 20px;
            border-radius: 0 !important;
            text-align: left;
            position: relative;
            padding-left: 140px;
        }

            .verification-table tbody td:first-child {
                border-radius: 14px 14px 0 0 !important;
            }

            .verification-table tbody td:last-child {
                border-radius: 0 0 14px 14px !important;
            }

            .verification-table tbody td::before {
                content: attr(data-label);
                position: absolute;
                left: 20px;
                font-weight: 700;
                text-transform: uppercase;
                font-size: 0.75rem;
                color: var(--primary);
                letter-spacing: 0.5px;
            }

        .user-info {
            justify-content: flex-start;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-custom {
            width: 100%;
            justify-content: center;
        }

        }

        /* Responsive table wrapper */
        .table-responsive {
            border-radius: 14px;
            overflow: visible;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="table-container">
            <div class="page-header">
                <div class="header-content">
                    <div class="header-icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <div class="header-text">
                        <h1>Verification Requests</h1>
                        <p>Review and approve provider verification documents</p>
                    </div>
                </div>
                <span class="status-badge">
                    <i class="fas fa-hourglass-half"></i>
                    @Model.Count Pending
                </span>
            </div>

            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table verification-table">
                        <thead>
                            <tr>
                                <th>Provider</th>
                                <th>Email</th>
                                <th>Document</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td data-label="Provider">
                                        <div class="user-info">
                                            <div class="user-avatar">
                                                @request.name.Substring(0, 1).ToUpper()
                                            </div>
                                            <div class="user-details">
                                                <span class="user-name">@request.name</span>
                                                <span class="user-id">ID: @request.providerId</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-label="Email">
                                        <div class="email-info">
                                            <i class="fas fa-envelope"></i>
                                            <span>@request.email</span>
                                        </div>
                                    </td>
                                    <td data-label="Document">
                                        <a asp-controller="Admin"
                                           asp-action="DownloadPdf"
                                           asp-route-id="@request.providerId"
                                           asp-route-type="@request.type"
                                           class="btn-custom btn-download">
                                            <i class="fas fa-file-pdf"></i>
                                            Download PDF
                                        </a>
                                    </td>
                                    <td data-label="Actions">
                                        <div class="action-buttons">
                                            <a asp-controller="Admin"
                                               asp-action="AcceptRequest"
                                               asp-route-providerId="@request.providerId"
                                               asp-route-type="@request.type"
                                               asp-route-requestId="@request.id"
                                               class="btn-custom btn-accept">
                                                <i class="fas fa-check-circle"></i>
                                                Accept
                                            </a>
                                            <a asp-controller="Admin"
                                               asp-action="DenyRequest"
                                               asp-route-providerId="@request.providerId"
                                               asp-route-type="@request.type"
                                               asp-route-requestId="@request.id"
                                               class="btn-custom btn-deny">
                                                <i class="fas fa-times-circle"></i>
                                                Deny
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <h3>All Caught Up!</h3>
                    <p>There are no pending verification requests at the moment.</p>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>