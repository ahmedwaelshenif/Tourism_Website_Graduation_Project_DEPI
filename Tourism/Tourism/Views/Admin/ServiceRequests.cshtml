@using Tourism.ViewModel
@model List<ServiceRequestsViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
        --primary: #6a1b9a;
        --primary-light: #9c4dcc;
        --primary-dark: #38006b;
        --accent: #ff4081;
        --success: #00897b;
        --warning: #f57c00;
        --text-dark: #2d3748;
        --text-light: #718096;
        --border-color: #e2e8f0;
        --bg-light: #f7fafc;
        }

        body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 40px 0;
        }

        .table-container {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        margin: 0 auto;
        max-width: 1400px;
        }

        .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid var(--primary);
        }

        .table-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
        }

        .table-title i {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        }

        .table-badge {
        background: var(--accent);
        color: white;
        padding: 8px 20px;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        }

        .custom-table {
        margin: 0;
        border: none;
        border-collapse: separate;
        border-spacing: 0;
        }

        .custom-table thead {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        }

        .custom-table thead th {
        color: white;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        padding: 18px 20px;
        border: none;
        vertical-align: middle;
        }

        .custom-table thead th:first-child {
        border-radius: 12px 0 0 0;
        }

        .custom-table thead th:last-child {
        border-radius: 0 12px 0 0;
        }

        .custom-table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid var(--border-color);
        }

        .custom-table tbody tr:hover {
        background: linear-gradient(90deg, rgba(106, 27, 154, 0.03) 0%, rgba(106, 27, 154, 0.06) 100%);
        transform: translateX(5px);
        box-shadow: -5px 0 0 var(--primary);
        }

        .custom-table tbody tr:last-child {
        border-bottom: none;
        }

        .custom-table tbody td {
        padding: 20px;
        vertical-align: middle;
        color: var(--text-dark);
        font-size: 0.95rem;
        border: none;
        }

        .id-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
        color: white;
        padding: 6px 14px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 0.9rem;
        min-width: 60px;
        }

        .provider-id {
        color: var(--text-light);
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
        }

        .provider-id i {
        color: var(--primary-light);
        }

        .service-info {
        display: flex;
        flex-direction: column;
        gap: 5px;
        }

        .service-id {
        color: var(--text-light);
        font-size: 0.85rem;
        font-weight: 500;
        }

        .service-name {
        color: var(--text-dark);
        font-weight: 600;
        font-size: 1rem;
        }

        .date-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: var(--bg-light);
        padding: 8px 16px;
        border-radius: 8px;
        color: var(--text-dark);
        font-weight: 500;
        font-size: 0.9rem;
        }

        .date-badge i {
        color: var(--primary-light);
        }

        .btn-view {
        background: linear-gradient(135deg, var(--warning) 0%, #ef6c00 100%);
        color: white;
        border: none;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(245, 124, 0, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        }

        .btn-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(245, 124, 0, 0.4);
        background: linear-gradient(135deg, #ef6c00 0%, var(--warning) 100%);
        }

        .btn-view i {
        transition: transform 0.3s ease;
        }

        .btn-view:hover i {
        transform: translateX(3px);
        }

        .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--text-light);
        }

        .empty-state i {
        font-size: 4rem;
        color: var(--border-color);
        margin-bottom: 20px;
        }

        .empty-state h3 {
        color: var(--text-dark);
        margin-bottom: 10px;
        }

        @@media (max-width: 768px) {
        .table-container

        {
        padding: 20px;
        border-radius: 12px;
        }

        .table-header {
        flex-direction: column;
        gap: 15px;
        text-align: center;
        }

        .table-title {
        font-size: 1.5rem;
        }

        .custom-table {
        font-size: 0.85rem;
        }

        .custom-table thead th,
        .custom-table tbody td {
        padding: 12px 10px;
        }

        .btn-view {
        padding: 8px 16px;
        font-size: 0.85rem;
        }

        }

        /* Responsive table wrapper */
        .table-responsive {
        border-radius: 12px;
        overflow: hidden;
        }

        /* Scrollbar styling */
        .table-responsive::-webkit-scrollbar {
        height: 8px;
        }

        .table-responsive::-webkit-scrollbar-track {
        background: var(--bg-light);
        border-radius: 10px;
        }

        .table-responsive::-webkit-scrollbar-thumb {
        background: var(--primary-light);
        border-radius: 10px;
        }

        .table-responsive::-webkit-scrollbar-thumb:hover {
        background: var(--primary);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="table-container">
            <div class="table-header">
                <h1 class="table-title">
                    <i class="fas fa-clipboard-list"></i>
                    Service Requests
                </h1>
                <span class="table-badge">@Model.Count Request(s)</span>
            </div>

            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table custom-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Provider</th>
                                <th>Service ID</th>
                                <th>Service Name</th>
                                <th>Date Added</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="id-badge">#@item.id</span>
                                    </td>
                                    <td>
                                        <span class="provider-id">
                                            <i class="fas fa-user-circle"></i>
                                            @item.providerId
                                        </span>
                                    </td>
                                    <td>
                                        <span class="service-id">SRV-@item.serviceId</span>
                                    </td>
                                    <td>
                                        <div class="service-info">
                                            <span class="service-name">@item.service_name</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="date-badge">
                                            <i class="fas fa-calendar-alt"></i>
                                            @item.date
                                        </span>
                                    </td>
                                    <td>
                                        @if (@item.serviceType == "Merchant")
                                        {
                                            <form asp-controller="Admin" asp-action="ViewProduct" method="get" style="display:inline;">
                                                <input type="hidden" name="id" value="@item.serviceId" />
                                                <button type="submit" class="btn-view">
                                                    View Details
                                                    <i class="fas fa-arrow-right"></i>
                                                </button>
                                            </form>
                                        }
                                        else if(@item.serviceType == "Restaurant"){
                                        <form asp-controller="Admin" asp-action="ViewMeal" method="get" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.serviceId" />
                                            <button type="submit" class="btn-view">
                                                View Details
                                                <i class="fas fa-arrow-right"></i>
                                            </button>
                                        </form>
                                        }
                                        else if (@item.serviceType == "Hotel")
                                        {
                                            <form asp-controller="Admin" asp-action="ViewRoomServiceRequest" method="get" style="display:inline;">
                                                <input type="hidden" name="id" value="@item.serviceId" />
                                                <button type="submit" class="btn-view">
                                                    View Details
                                                    <i class="fas fa-arrow-right"></i>
                                                </button>
                                            </form>
                                        }
                                     
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-inbox"></i>
                    <h3>No Service Requests</h3>
                    <p>There are currently no service requests to display.</p>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>