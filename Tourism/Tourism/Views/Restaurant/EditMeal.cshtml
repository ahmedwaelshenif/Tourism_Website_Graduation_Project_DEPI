@using Tourism.ViewModel
@model MealViewModel
@{
    <!-- Add Menu Item Modal -->
    <div class="card-header bg-white text-black text-center rounded-top-4">
        <h4 class="mb-0">Edit Meal</h4>
    </div>
    <div class="modal-body">
        <form method="post" asp-action="EditMeal" asp-controller="Restaurant" enctype="multipart/form-data">
            <input type="hidden" asp-for="id" />
            <div class="form-group mb-3">
                <label class="form-label">Dish Name</label>
                <input asp-for="name" class="form-control" placeholder="e.g. Caesar Salad" />
                <span asp-validation-for="name" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Price ($)</label>
                <input asp-for="price" type="number" step="0.01" class="form-control" required placeholder="e.g. 15.00">
                <span asp-validation-for="price" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Ingredients</label>
                <textarea asp-for="description" class="form-control" id="inputIngredients" rows="2" required placeholder="e.g. Lettuce, croutons, parmesan..."></textarea>
                <span asp-validation-for="description" class="text-danger small"></span>
            </div>
            <div class="form-group mb-4">
                <label class="form-label">Upload an image</label>
                <input asp-for="UploadedImage" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="UploadedImage" class="text-danger small"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-danger px-5 py-2 rounded-pill shadow-sm">
                    <i class="bi bi-plus-circle"></i> Save
                </button>
            </div>
        </form>
    </div>
}
