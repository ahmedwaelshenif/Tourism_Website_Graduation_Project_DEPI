@using Tourism.ViewModel
@model RestaurantDashboardViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gourmet Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --primary-color: #ff6b6b;
            --secondary-color: #4ecdc4;
            --dark-bg: #f7f9fc;
            --text-color: #2d3436;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--dark-bg);
            color: var(--text-color);
            /* Background image */
            background-image: url('/pics/R_BG.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            background-position: center center;
        }

        /* Navbar Styling */
        .navbar {
            background-color: white;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            padding: 1rem 2rem;
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--primary-color) !important;
            font-size: 1.5rem;
        }

        .nav-action-btn {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background-color: transparent;
            padding: 5px 10px;
            border-radius: 6px;
            text-decoration: none;
            transition: all 0.3s ease;
            font-weight: 600;
            font-size: 1rem;
            display: inline-block;
            margin-left: 5px;
        }

            .nav-action-btn:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .nav-text-link {
            border: none;
            background-color: transparent;
            box-shadow: none;
            color: var(--primary-color);
            padding: 5px 8px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            display: inline-block;
            margin-left: 5px;
            transition: color 0.4s ease, transform 0.4s ease;
        }

            .nav-text-link:hover {
                color: var(--primary-color);
                text-decoration: none;
                transform: translateY(-6px);
            }

        /* 🛠️ BEGIN INBOX STYLES FIX 🛠️ */
        .inbox-wrapper {
            position: relative; /* Must be relative for the menu to be positioned correctly */
            display: inline-block;
        }

        .inbox-toggle {
            /* Make the button invisible, only the icon should show */
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
            font-size: 1.2rem;
            color: #555;
            transition: color 0.3s;
            display: flex;
            align-items: center;
        }

            .inbox-toggle:hover {
                color: var(--primary-color);
            }

        .badge-custom {
            position: absolute;
            top: -5px;
            right: -10px;
            font-size: 0.6rem;
            background-color: var(--primary-color);
            color: white;
            padding: 2px 6px;
            border-radius: 50%;
            font-weight: bold;
            line-height: 1;
            z-index: 1001; /* Ensure badge is on top */
        }

        .inbox-menu {
            position: absolute;
            top: 100%;
            right: 0; /* Position the menu to the right of the button */
            width: 300px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            z-index: 1000;
            margin-top: 10px;
            display: none; /* Hidden by default */
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid #eee;
        }

        .inbox-item {
            padding: 10px 15px;
            border-bottom: 1px solid #eee;
            font-size: 0.9rem;
            color: var(--text-color);
        }

            .inbox-item:last-child {
                border-bottom: none;
            }

        .inbox-empty {
            padding: 15px;
            text-align: center;
            color: #999;
            font-style: italic;
        }
        /* 🛠️ END INBOX STYLES FIX 🛠️ */


        /* Remaining styles kept as is for brevity in this response but included in the code block */
        .dashboard-container {
            padding: 2rem;
        }

        .small-card {
            border: 2px solid transparent;
            transition: transform 0.5s ease, box-shadow 0.5s ease, border-color 0.5s ease;
            border-radius: 12px;
            min-height: 140px;
        }

            .small-card:hover {
                transform: translateY(-6px);
                border-color: var(--primary-color);
                box-shadow: 0 8px 20px rgba(255, 107, 107, 0.2);
            }

        .icon-wrap {
            height: 70px;
            display: grid;
            place-items: center;
            font-size: 34px;
            color: #c0392b;
            background: #fff6f3;
            border-bottom: 1px solid #f1e1dc;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            transition: all 0.5s ease;
        }

        .small-card:hover .icon-wrap {
            background: #ffece8;
            color: var(--primary-color);
        }

        .card-title {
            font-size: 0.95rem;
            font-weight: 600;
            transition: color 0.5s ease;
        }

        .small-card:hover .card-title {
            color: var(--primary-color);
        }

        .card-text.small {
            font-size: 0.78rem;
            color: #666;
            line-height: 1.2;
            transition: color 0.5s ease;
        }

        .small-card:hover .card-text.small {
            color: #888;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-utensils me-2"></i>Welcome, @ViewBag.RestaurantName
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                    <li class="nav-item">
                        <a class="nav-action-btn" asp-action="Logout" asp-controller="Restaurant">
                            <i class="fas fa-sign-out-alt me-1"></i>Log Out
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container dashboard-container">
        <div class="container mt-4">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="row justify-content-center g-3 row-cols-2 row-cols-md-3 row-cols-lg-5">

                <a asp-action="ShowMeals" asp-controller="Restaurant"
                   class="col text-decoration-none text-dark ">
                    <div class="card small-card text-center shadow-sm mt-xxl-5">
                        <div class="icon-wrap">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <div class="card-body p-2">
                            <h6 class="card-title mb-1">Meals</h6>
                            <p class="card-text small mb-0">Manage and view your menu easily.</p>
                        </div>
                    </div>
                </a>

                <a asp-action="ShowTables" asp-controller="Restaurant"
                   class="col text-decoration-none text-dark">
                    <div class="card small-card text-center shadow-sm mt-xxl-5">
                        <div class="icon-wrap">
                            <i class="bi bi-grid-3x3-gap-fill"></i>
                        </div>
                        <div class="card-body p-2">
                            <h6 class="card-title mb-1">Tables</h6>
                            <p class="card-text small mb-0">Manage and view your tables easily.</p>
                        </div>
                    </div>
                </a>

                <a asp-action="BookedTables" asp-controller="Restaurant" class="col text-decoration-none text-dark">
                    <div class="card small-card text-center shadow-sm mt-xxl-5">
                        <div class="icon-wrap">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div class="card-body p-2">
                            <h6 class="card-title mb-1">Booked Tables</h6>
                            <p class="card-text small mb-0">Track table reservations.</p>
                        </div>
                    </div>
                </a>

                <a asp-action="AddMeal" asp-controller="Restaurant"
                   class="col text-decoration-none text-dark">
                    <div class="card small-card text-center shadow-sm mt-xxl-5">
                        <div class="icon-wrap">
                            <i class="bi bi-plus-circle-dotted"></i>
                        </div>
                        <div class="card-body p-2 justify-content-center">
                            <h6 class="card-title mb-1">Add a Meal</h6>
                            <p class="card-text small mb-0">Quickly add meals.</p>
                        </div>
                    </div>
                </a>

                <a asp-action="AddTable" asp-controller="Restaurant"
                   class="col text-decoration-none text-dark">
                    <div class="card small-card text-center shadow-sm mt-xxl-5">
                        <div class="icon-wrap">
                            <i class="bi bi-plus-square"></i>
                        </div>
                        <div class="card-body p-2">
                            <h6 class="card-title mb-1">Add a Table</h6>
                            <p class="card-text small mb-0">Quickly add tables.</p>
                        </div>
                    </div>
                </a>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const inboxToggle = document.getElementById('inboxToggle');
            const inboxMenu = document.getElementById('inboxMenu');

            if (inboxToggle && inboxMenu) {
                inboxToggle.addEventListener('click', function (event) {
                    event.stopPropagation(); // Stop click from bubbling up
                    // Toggle visibility
                    if (inboxMenu.style.display === 'block') {
                        inboxMenu.style.display = 'none';
                    } else {
                        inboxMenu.style.display = 'block';
                    }
                });

                // Close the menu when clicking anywhere else on the document
                document.addEventListener('click', function (event) {
                    const isClickInside = inboxMenu.contains(event.target) || inboxToggle.contains(event.target);
                    if (inboxMenu.style.display === 'block' && !isClickInside) {
                        inboxMenu.style.display = 'none';
                    }
                });
            }
        });
    </script>
</body>
</html>