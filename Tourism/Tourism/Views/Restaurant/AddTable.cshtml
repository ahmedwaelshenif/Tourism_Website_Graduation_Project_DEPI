@using Tourism.ViewModel;
@model TableViewModel

<style>
    /* Theme Variables */
    :root {
        --primary-color: #ff6b6b;
        --primary-light: #ff8585;
        --primary-bright: #ff9e9e;
        --secondary-color: #4ecdc4;
        --dark-bg: #f7f9fc;
        --text-color: #2d3436;
    }

    body {
        background-color: var(--dark-bg);
        font-family: 'Poppins', sans-serif;
    }

    /* Back Button Style - Matching Show Tables */
    .btn-back-dashboard {
        font-size: 0.9rem;
        font-weight: 600;
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
        background: white;
        border-radius: 6px;
        padding: 10px 20px;
        transition: all .3s ease;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

        .btn-back-dashboard:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-4px);
            box-shadow: 0 12px 28px rgba(255, 107, 107, 0.18);
            text-decoration: none;
        }

    /* Card Styling */
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .card-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
    }

    .modal-body {
        padding: 2rem;
    }

    /* Form Styling */
    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 10px 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25);
        }

    .form-label {
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 8px;
    }

    /* Submit Button */
    .btn-submit {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 100%;
        color: white;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 107, 107, 0.3);
            color: white;
        }

    /* Button Container */
    .button-container {
        margin-top: 2rem;
    }

    /* Back Button Container */
    .back-button-container {
        margin-top: 1.5rem;
        text-align: center;
    }
</style>

<div class="container mt-4">
    <!-- Add Table Card -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="mb-0"><i class="fas fa-table me-2"></i>Add New Table</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AddTable" asp-controller="Restaurant">
                        <div class="mb-3">
                            <label class="form-label">Table Number</label>
                            <input asp-for="number" type="number" class="form-control" required placeholder="e.g. 10">
                            <span asp-validation-for="number" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Capacity (Persons)</label>
                            <input asp-for="numberOfPersons" type="number" class="form-control" required placeholder="e.g. 4">
                            <span asp-validation-for="numberOfPersons" class="text-danger small"></span> 
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Reservation Price ($)</label>
                            <input asp-for="bookingPrice" type="number" step="0.01" class="form-control" required placeholder="e.g. 25.00">
                            <span asp-validation-for="bookingPrice" class="text-danger small"></span>
                        </div>

                        <!-- Add Table Button -->
                        <div class="button-container">
                            <button type="submit" class="btn btn-submit">
                                <i class="fas fa-plus-circle me-2"></i>Add Table
                            </button>
                        </div>

                        <!-- Back Button - Centered with space -->
                        <div class="back-button-container">
                            <a asp-controller="Restaurant" asp-action="RestaurantDashboard" class="btn-back-dashboard">
                                <i class="fas fa-arrow-left me-2"></i>Back to Restaurant Dashboard
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">