@model IEnumerable<Tourism.ViewModel.TouristBookingHistoryViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bookings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #ff6b6b;
            --primary-light: #ff8585;
            --primary-bright: #ff9e9e;
            --secondary-color: #4ecdc4;
            --dark-bg: #f7f9fc;
            --text-color: #2d3436;
        }

        body {
            background-color: var(--dark-bg);
            font-family: 'Poppins', sans-serif;
        }

        .navbar {
            background-color: white;
            padding: 1rem 2rem;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--primary-color) !important;
            font-size: 1.5rem;
        }

        .booking-card {
            border-radius: 15px;
            background: white;
            transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
            border: 2px solid transparent;
            cursor: pointer;
            margin-bottom: 20px;
        }

            .booking-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 28px rgba(255,107,107,0.18);
                border-color: var(--primary-color);
            }

        .back-btn {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background-color: transparent;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: .3s ease;
        }

            .back-btn:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .cancel-btn {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background-color: transparent;
            padding: 6px 12px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            cursor: pointer;
        }

            .cancel-btn:hover {
                background-color: var(--primary-color);
                color: white;
            }

            .cancel-btn:disabled {
                border-color: #6c757d;
                color: #6c757d;
                background-color: transparent;
                cursor: not-allowed;
            }

        .nav-text-link {
            border: none;
            background-color: transparent;
            box-shadow: none;
            color: var(--primary-color);
            padding: 5px 8px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            display: inline-block;
            margin-left: 5px;
            transition: color 0.4s ease, transform 0.4s ease;
        }

            .nav-text-link:hover {
                color: var(--primary-color);
                text-decoration: none;
                transform: translateY(-6px);
            }

        /* Log Out Button Style (Bordered) - Same as RestaurantHomePage */
        .nav-action-btn {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background-color: transparent;
            padding: 5px 10px;
            border-radius: 6px;
            text-decoration: none;
            transition: all 0.3s ease;
            font-weight: 600;
            font-size: 1rem;
            display: inline-block;
            margin-left: 5px;
        }

            .nav-action-btn:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .restaurant-name {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--text-color);
        }

        .booking-detail {
            font-size: 0.95rem;
            color: #555;
        }

        .price-tag {
            font-size: 1.1rem;
            font-weight: bold;
            color: var(--primary-color);
        }

        .status-badge {
            background-color: var(--primary-color);
            color: white;
            font-size: 0.8rem;
            padding: 5px 12px;
            border-radius: 20px;
        }

        .cancelled-badge {
            background-color: #6c757d;
            color: white;
            font-size: 0.8rem;
            padding: 5px 12px;
            border-radius: 20px;
        }

        /* Confirmation Popup Styles */
        .confirmation-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            backdrop-filter: blur(5px);
        }

        .confirmation-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            border: 2px solid var(--primary-color);
            max-width: 450px;
            width: 90%;
            text-align: center;
            animation: slideIn 0.3s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-30px) scale(0.9);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .confirmation-icon {
            font-size: 3rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .confirmation-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-color);
            margin-bottom: 1rem;
        }

        .confirmation-message {
            color: #666;
            margin-bottom: 2rem;
            line-height: 1.5;
        }

        .confirmation-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
        }

        .confirm-btn {
            border: 2px solid var(--primary-color);
            background-color: var(--primary-color);
            color: white;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .confirm-btn:hover {
                background-color: var(--primary-light);
                border-color: var(--primary-light);
                transform: translateY(-2px);
            }

        .cancel-confirm-btn {
            border: 2px solid #6c757d;
            background-color: transparent;
            color: #6c757d;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .cancel-confirm-btn:hover {
                background-color: #6c757d;
                color: white;
                transform: translateY(-2px);
            }

        /* Error Popup Specific Styles */
        .confirmation-overlay .confirmation-card {
            animation: slideIn 0.3s ease-out;
        }

        .confirmation-overlay .confirmation-icon.error {
            color: #dc3545;
        }

        .confirmation-overlay .confirmation-title.error {
            color: #dc3545;
        }

        .confirm-btn.error {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .confirm-btn.error:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand">
                <i class="fas fa-history me-2"></i>My Bookings
            </a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (Model == null || !Model.Any())
                {
                    <div class="alert alert-info text-center" style="background-color: transparent; color:dimgrey; border: none;">
                        <i class="fas fa-calendar-times fa-2x mb-3"></i>
                        <h4>No Bookings Yet</h4>
                        <p>You haven't made any table reservations yet.</p>
                        <a asp-action="ShowRestaurants" asp-controller="Tourist" class="btn btn-outline-danger fw-semibold">
                            <i class="fas fa-utensils me-2"></i>Explore Restaurants
                        </a>
                    </div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var booking in Model)
                        {
                            <div class="col-12">
                                <div class="booking-card d-flex align-items-center p-3 shadow-sm">
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="restaurant-name">@booking.RestaurantName</div>
                                            @if (booking.IsCancelled)
                                            {
                                                <span class="cancelled-badge">Cancelled</span>
                                            }
                                            else
                                            {
                                                <span class="status-badge">Confirmed</span>
                                            }
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="booking-detail">
                                                    <strong><i class="fas fa-chair me-2"></i>Table #@booking.TableNumber</strong>
                                                </div>
                                                <div class="booking-detail">
                                                    <i class="fas fa-users me-2"></i>@booking.NumberOfGuests Guests
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="booking-detail">
                                                    <i class="fas fa-calendar me-2"></i>@booking.BookingDate.ToString("MMM dd, yyyy")
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="booking-detail">
                                                    <i class="fas fa-location-dot me-2"></i>@booking.RestaurantAddress
                                                </div>
                                                <div class="booking-detail">
                                                    <i class="fas fa-phone me-2"></i>@booking.RestaurantHotline
                                                </div>
                                            </div>
                                            <div class="col-md-3 text-end">
                                                <div class="price-tag mb-2">@booking.BookingPrice.ToString("C")</div>
                                                <small class="text-muted">Booking #@booking.BookingId</small>
                                                @if (!booking.IsCancelled)
                                                {
                                                    <div class="mt-2">
                                                        <button class="cancel-btn" data-booking-id="@booking.BookingId" data-booking-details="Table #@booking.TableNumber at @booking.RestaurantName - @booking.BookingPrice.ToString("C")">
                                                            <i class="fas fa-times me-1"></i>Cancel Booking
                                                        </button>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="ShowRestaurants" asp-controller="Tourist" class="back-btn">
                            <i class="fas fa-arrow-left me-1"></i>Back to Restaurants
                        </a>
                    </div>
                }

                
            </div>
        </div>
    </div>

    <!-- Confirmation Popup -->
    <div id="confirmationPopup" class="confirmation-overlay" style="display: none;">
        <div class="confirmation-card">
            <div class="confirmation-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <h3 class="confirmation-title">Cancel Booking</h3>
            <p class="confirmation-message" id="confirmationMessage">
                Are you sure you want to cancel this booking? The amount will be refunded to your credit card.
            </p>
            <div class="confirmation-buttons">
                <button class="cancel-confirm-btn" id="cancelConfirmBtn">
                    <i class="fas fa-times me-1"></i>Keep Booking
                </button>
                <button class="confirm-btn" id="confirmCancelBtn">
                    <i class="fas fa-check me-1"></i>Yes, Cancel
                </button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            let currentBookingId = null;
            let currentButton = null;

            $('.cancel-btn').on('click', function () {
                currentButton = $(this);
                currentBookingId = currentButton.data('booking-id');
                const bookingDetails = currentButton.data('booking-details');

                // Update confirmation message with booking details
                $('#confirmationMessage').html(
                    `Are you sure you want to cancel <strong>${bookingDetails}</strong>?<br>The amount will be refunded to your credit card.`
                );

                // Show the beautiful popup
                $('#confirmationPopup').fadeIn(300);
            });

            // Handle confirmation
            $('#confirmCancelBtn').on('click', function () {
                if (!currentBookingId) return;

                // Show loading state on the original button
                currentButton.prop('disabled', true);
                currentButton.html('<i class="fas fa-spinner fa-spin me-1"></i>Cancelling...');

                // Hide popup
                $('#confirmationPopup').fadeOut(300);

                // Process cancellation
                $.ajax({
                    url: '/Tourist/CancelBooking',
                    type: 'POST',
                    data: { bookingId: currentBookingId },
                    success: function (response) {
                        if (response.success) {
                            location.reload(); // Reload the page to reflect changes
                        } else {
                            // Show error popup instead of alert
                            showErrorPopup(response.message);
                            currentButton.prop('disabled', false);
                            currentButton.html('<i class="fas fa-times me-1"></i>Cancel Booking');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error cancelling booking:', error);
                        showErrorPopup('An error occurred while cancelling the booking. Please try again.');
                        currentButton.prop('disabled', false);
                        currentButton.html('<i class="fas fa-times me-1"></i>Cancel Booking');
                    }
                });
            });

            // Handle cancellation (close popup)
            $('#cancelConfirmBtn').on('click', function () {
                $('#confirmationPopup').fadeOut(300);
                currentBookingId = null;
                currentButton = null;
            });

            // Close popup when clicking outside
            $('#confirmationPopup').on('click', function (e) {
                if (e.target === this) {
                    $('#confirmationPopup').fadeOut(300);
                    currentBookingId = null;
                    currentButton = null;
                }
            });

            // Function to show error popup
            function showErrorPopup(message) {
                // Create error popup HTML if it doesn't exist
                if ($('#errorPopup').length === 0) {
                    $('body').append(`
                        <div id="errorPopup" class="confirmation-overlay" style="display: none;">
                            <div class="confirmation-card">
                                <div class="confirmation-icon" style="color: #dc3545;">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </div>
                                <h3 class="confirmation-title" style="color: #dc3545;">Cancellation Failed</h3>
                                <p class="confirmation-message" id="errorMessage">${message}</p>
                                <div class="confirmation-buttons">
                                    <button class="confirm-btn" id="closeErrorBtn" style="background-color: #dc3545; border-color: #dc3545;">
                                        <i class="fas fa-check me-1"></i>OK
                                    </button>
                                </div>
                            </div>
                        </div>
                    `);

                    // Add event listener for the close button
                    $(document).on('click', '#closeErrorBtn', function() {
                        $('#errorPopup').fadeOut(300);
                    });

                    // Close error popup when clicking outside
                    $('#errorPopup').on('click', function (e) {
                        if (e.target === this) {
                            $('#errorPopup').fadeOut(300);
                        }
                    });
                } else {
                    // Update message and show existing popup
                    $('#errorMessage').text(message);
                }

                $('#errorPopup').fadeIn(300);
            }
        });
    </script>
</body>
</html>