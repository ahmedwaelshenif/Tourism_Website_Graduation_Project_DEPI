@model IEnumerable<Tourism.ViewModel.TableViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Tables</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #ff6b6b;
            --secondary-color: #4ecdc4;
            --dark-bg: #f7f9fc;
            --text-color: #2d3436;
        }

        body {
            background-color: var(--dark-bg);
            font-family: 'Poppins', sans-serif;
        }

        .navbar {
            background-color: white;
            padding: 1rem 2rem;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--primary-color) !important;
            font-size: 1.5rem;
        }

        .table-card {
            border-radius: 15px;
            background: white;
            transition: transform .3s ease, box-shadow .3s ease, border-color .3s ease;
            border: 2px solid transparent;
            cursor: pointer;
            margin-bottom: 20px;
        }

            .table-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 28px rgba(255,107,107,0.18);
                border-color: var(--primary-color);
            }

        .info-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: var(--text-color);
        }

        .info-text {
            font-size: .95rem;
            color: #555;
        }

        .price-tag {
            font-size: 1.1rem;
            font-weight: bold;
            color: var(--primary-color);
        }

        .book-btn {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background-color: transparent;
            font-weight: 600;
            border-radius: 8px;
            padding: 6px 12px;
            transition: .3s ease;
            text-decoration: none;
        }

            .book-btn:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .back-btn {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background-color: transparent;
            padding: 6px 12px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: .3s ease;
        }

            .back-btn:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .disabled-book-btn {
            border: 2px solid #888;
            color: #888;
            background-color: transparent;
            font-weight: 600;
            border-radius: 8px;
            padding: 6px 12px;
            cursor: not-allowed;
            transition: none;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand">
                <i class="fas fa-chair me-2"></i>Available Tables
            </a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row g-3">

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-warning text-center w-100 mt-4" style="background-color: transparent; color:dimgrey; border: none;">
                    No available tables.
                </div>
            }
            else
            {
                foreach (var t in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        @{
                            // This Razor block will now correctly read the IsInCart property set by the Controller
                            string buttonText = t.IsInCart ? "Already Booked" : "Book Now";
                            string buttonClass = t.IsInCart ? "disabled-book-btn" : "book-btn add-to-table-cart";
                            bool isDisabled = t.IsInCart;
                            string iconClass = t.IsInCart ? "fas fa-check-circle" : "fas fa-calendar-check";
                            string buttonStyle = t.IsInCart ? "border-color: #888; color: #888; cursor: not-allowed;" : "";
                        }
                        <div class="table-card p-3 shadow-sm">

                            <div class="info-title mb-1">Table #@t.number</div>

                            <div class="info-text">Seats: @t.numberOfPersons persons</div>

                            <div class="price-tag mt-2">$ @t.bookingPrice</div>

                            <button class="@buttonClass mt-3" data-table-id="@t.id" @(isDisabled ? "disabled" : "") style="@buttonStyle">
                                <i class="@iconClass me-1"></i>@buttonText
                            </button>

                        </div>
                    </div>
                }
            }

            <div class="ms-auto">
                <a class="back-btn" asp-action="ViewMenu" asp-controller="Tourist" asp-route-restaurantId="@ViewBag.RestaurantId">Back</a>
            </div>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.book-btn').on('click', function () {
                var tableId = $(this).data('table-id');
                window.location.href = '/Tourist/BookTable?tableId=' + tableId;
            });
        });
    </script>
</body>
</html>