@model Tourism.Models.Tourist

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - Tourism</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #003D5B 0%, #005078 100%);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .signup-container {
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            max-width: 800px;
            width: 100%;
            padding: 40px;
            margin: 20px auto;
        }

        .signup-header {
            text-align: center;
            margin-bottom: 40px;
        }

            .signup-header h1 {
                color: #003D5B;
                font-weight: 700;
                font-size: 2.5rem;
                margin-bottom: 10px;
            }

            .signup-header p {
                color: #666;
                font-size: 1rem;
            }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 12px 15px;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

            .form-control:focus, .form-select:focus {
                border-color: #003D5B;
                box-shadow: 0 0 0 0.2rem rgba(0, 61, 91, 0.15);
            }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
        }

        .btn-signup {
            background-color: #003D5B;
            color: white;
            border: none;
            padding: 15px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 10px;
            width: 100%;
            margin-top: 20px;
            transition: all 0.3s;
        }

            .btn-signup:hover {
                background-color: #005078;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 61, 91, 0.3);
            }

        .login-link {
            text-align: center;
            margin-top: 20px;
            color: #666;
        }

            .login-link a {
                color: #003D5B;
                font-weight: 600;
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

        .section-title {
            color: #003D5B;
            font-weight: 600;
            font-size: 1.2rem;
            margin-top: 30px;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #003D5B;
        }

        .required-field::after {
            content: " *";
            color: red;
        }

        .validation-summary {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 20px;
            }
    </style>
</head>
<body>
    <div class="signup-container">
        <div class="signup-header">
            <h1>Create Your Account</h1>
            <p>Join us for an amazing tourism experience</p>
        </div>

        <div asp-validation-summary="All" class="validation-summary"></div>

        <form asp-action="SignUp" method="post">
            <!-- Personal Information Section -->
            <h3 class="section-title">Personal Information</h3>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="firstName" class="form-label required-field">First Name</label>
                    <input asp-for="firstName" class="form-control" placeholder="Enter your first name" />
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label required-field">Last Name</label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="age" class="form-label required-field">Age</label>
                    <input asp-for="age" type="number" class="form-control" placeholder="Enter your age" min="1" max="120" />
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="gender" class="form-label required-field">Gender</label>
                    <select asp-for="gender" class="form-select">
                        <option value="">Select your gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="nationality" class="form-label required-field">Nationality</label>
                <input asp-for="nationality" class="form-control" placeholder="Enter your nationality" />
                <span asp-validation-for="nationality" class="text-danger"></span>
            </div>

            <!-- Contact Information Section -->
            <h3 class="section-title">Contact Information</h3>

            <div class="mb-3">
                <label asp-for="email" class="form-label required-field">Email Address</label>
                <input asp-for="email" type="email" class="form-control" placeholder="example@email.com" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="phoneNumber" class="form-label required-field">Phone Number</label>
                <input asp-for="phoneNumber" type="tel" class="form-control" placeholder="+1234567890" />
                <span asp-validation-for="phoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="address" class="form-label required-field">Address</label>
                <input asp-for="address" class="form-control" placeholder="Enter your address" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>

            <!-- Account Security Section -->
            <h3 class="section-title">Account Security</h3>

            <div class="mb-3">
                <label asp-for="passwordHash" class="form-label required-field">Password</label>
                <input asp-for="passwordHash" type="password" class="form-control" placeholder="Enter password (min 6 characters)" />
                <span asp-validation-for="passwordHash" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-signup">Sign Up</button>

            <div class="login-link">
                Already have an account? <a asp-action="Login">Login here</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>