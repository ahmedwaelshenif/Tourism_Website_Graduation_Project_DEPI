@using Tourism.ViewModel

@{
    Layout = "EcommerceLayout";
}
@model EcommerceMainPageViewModel
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content container text-start">
            <h1>Welcome to the Leading Tourism E-Commerce Website</h1>
            <form class="d-flex hero-search mt-4" role="search">
                <input class="form-control rounded-pill me-2 px-4" type="search" placeholder="Search for products..." aria-label="Search">
                <button class="btn btn-warning rounded-pill px-4" type="submit">Search</button>
            </form>
            
           
        </div>
    </section>

    <!-- Feature Navigation Cards -->
    <section class="feature-nav-section">
        <div class="container">
            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="feature-nav-card category-card-nav" data-target="categories">
                        <div class="feature-nav-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
                            </svg>
                        </div>
                        <h3 class="feature-nav-title">Browse Categories</h3>
                        <p class="feature-nav-desc">Explore our wide range of product categories from souvenirs to travel essentials</p>
                        <div class="feature-nav-arrow">→</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-nav-card bestsellers-card-nav" data-target="bestsellers">
                        <div class="feature-nav-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M2.5 3.5a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-11zm2-2a.5.5 0 0 1 0-1h7a.5.5 0 0 1 0 1h-7zM0 13a1.5 1.5 0 0 0 1.5 1.5h13A1.5 1.5 0 0 0 16 13V6a1.5 1.5 0 0 0-1.5-1.5h-13A1.5 1.5 0 0 0 0 6v7zm1.5.5A.5.5 0 0 1 1 13V6a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5h-13z" />
                            </svg>
                        </div>
                        <h3 class="feature-nav-title">Best Sellers</h3>
                        <p class="feature-nav-desc">Discover our most popular products loved by travelers worldwide</p>
                        <div class="feature-nav-arrow">→</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-nav-card newarrivals-card-nav" data-target="newarrivals">
                        <div class="feature-nav-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zM4.285 9.567a.5.5 0 0 1 .683.183A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .183-.683zM10 8c-.552 0-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5S10.552 8 10 8z" />
                            </svg>
                        </div>
                        <h3 class="feature-nav-title">New Arrivals</h3>
                        <p class="feature-nav-desc">Check out the latest products and fresh additions to our collection</p>
                        <div class="feature-nav-arrow">→</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories -->
    <section class="category-section" id="categories">
        <h2>Categories</h2>
        <div class="container">
            <div class="row g-5 justify-content-center">
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Souvenirs" class="category-card"><img src="@Url.Content("~/pics/sphinx-giza-icon.png")" alt="">Souvenirs</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Travel" class="category-card"><img src="@Url.Content("~/pics/tourist-bag-icon.png")" alt="">Travel Gear</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Beach" class="category-card"><img src="@Url.Content("~/pics/summer-icon.png")" alt="">Beach Equip.</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Cosmetics" class="category-card"><img src="@Url.Content("~/pics/personal-care-products-icon.png")" alt="">Cosmetics</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Books" class="category-card"><img src="@Url.Content("~/pics/read-book-icon.png")" alt="">Books</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Clothing" class="category-card"><img src="@Url.Content("~/pics/woman-shirt-icon.png")" alt="">Clothing</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Jewelry" class="category-card"><img src="@Url.Content("~/pics/necklace-jewellery-icon.png")" alt="">Jewelry</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Electronics" class="category-card"><img src="@Url.Content("~/pics/mobile-icon.png")" alt="">Electronics</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Health" class="category-card"><img src="@Url.Content("~/pics/health-insurance-icon.png")" alt="">Health</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Food" class="category-card"><img src="@Url.Content("~/pics/bread-icon.png")" alt="">Food</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Art" class="category-card"><img src="@Url.Content("~/pics/art-icon.png")" alt="">Culture & Art</a>
                </div>
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a asp-controller="Tourist" asp-action="ShowProductsByCategory" asp-route-category="Sports" class="category-card"><img src="@Url.Content("~/pics/ball-football-icon.png")" alt="">Sports</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Best Sellers Section -->
    <section class="product-section">
        <div class="container">
            <h2 style="text-align: left;">Best Sellers</h2>
            <div class="row g-4 justify-content-start">
                @if (!Model.BestSellers.Any())
                {
                    <p class="text-center text-muted">No products found.</p>
                }
                else
                {
                    foreach (var p in Model.BestSellers)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
                            <div class="product-card p-3 position-relative w-100">
                                @if (p.offer != 0)
                                {
                                    <span class="position-absolute top-0 start-0 bg-warning text-white px-2 py-1 rounded-end fw-bold" style="font-size:0.8rem;">
                                        -@p.offer%
                                    </span>
                                }

                                @using (var ms = new MemoryStream())
                                {
                                    p.UploadedImages[0].CopyTo(ms);
                                    var bytes = ms.ToArray();
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(bytes)" alt="@p.name" class="mb-3" />
                                }

                                <h3 class="mt-2 mb-2">@p.name</h3>

                                <div class="rating mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= p.rate)
                                        {
                                            @:<span>&#9733;</span>
                                        }
                                        else
                                        {
                                            @:<span style="color:#ccc;">&#9733;</span>
                                        }
                                    }
                                    <span style="color:#555; font-size:0.8rem;">(@p.rate.ToString("0.0"))</span>
                                </div>

                                <div class="mb-2">
                                    @if (p.offer != 0)
                                    {
                                        var discountedPrice = p.price - (p.price * p.offer / 100.0);
                                        <span class="fw-bold" style="color: #003D5B; font-size: 1.2rem;">$@discountedPrice.ToString("0.00")</span>
                                        <span class="text-muted text-decoration-line-through" style="font-size:0.85rem;">$@p.price.ToString("0.00")</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold" style="color: #003D5B; font-size: 1.2rem;">$@p.price.ToString("0.00")</span>
                                    }
                                </div>

                                <p class="text-muted mb-2" style="font-size:0.8rem;">
                                    Delivery: @p.deliveryDate
                                </p>

                                <div class="product-buttons mt-2">
                                    <button type="button" class="btn-cart" data-product-id="@p.productId">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                             class="bi bi-cart" viewBox="0 0 16 16">
                                            <path d="M0 1.5A.5.5 0 0 1 .5 1h1a.5.5 0 0
                                                    1 .485.379L2.89 5H14.5a.5.5 0 0
                                                    1 .49.598l-1.5 7A.5.5 0 0
                                                    1 13 13H4a.5.5 0 0
                                                    1-.491-.408L1.01 2H.5a.5.5
                                                    0 0 1-.5-.5zM3.14 6l1.25
                                                    5h8.22l1.25-5H3.14zM5.5
                                                    12a1 1 0 1 0 0 2 1 1
                                                    0 0 0 0-2zm6 0a1 1
                                                    0 1 0 0 2 1 1
                                                    0 0 0 0-2z" />
                                        </svg>
                                        Add to Cart
                                    </button>
                                    <button class="btn-fav">❤</button>
                                </div>

                                <!-- Invisible link covering the entire card -->
                                <a asp-controller="Tourist" asp-action="ViewProduct" asp-route-id="@p.productId" class="product-link"></a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>

    <!-- New Arrivals Section -->
    <section class="product-section" style="background-color: #ffffff;">
        <div class="container">
            <h2 style="text-align: left;">New Arrivals</h2>
            <div class="row g-4 justify-content-start">
                @if (!Model.NewArrivals.Any())
                {
                    <p class="text-center text-muted">No products found.</p>
                }
                else
                {
                    foreach (var p in Model.NewArrivals)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
                            <div class="product-card p-3 position-relative w-100">
                                @if (p.offer != 0)
                                {
                                    <span class="position-absolute top-0 start-0 bg-warning text-white px-2 py-1 rounded-end fw-bold" style="font-size:0.8rem;">
                                        -@p.offer%
                                    </span>
                                }

                                @using (var ms = new MemoryStream())
                                {
                                    p.UploadedImages[0].CopyTo(ms);
                                    var bytes = ms.ToArray();
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(bytes)" alt="@p.name" class="mb-3" />
                                }

                                <h3 class="mt-2 mb-2">@p.name</h3>

                                <div class="rating mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= p.rate)
                                        {
                                            @:<span>&#9733;</span>
                                        }
                                        else
                                        {
                                            @:<span style="color:#ccc;">&#9733;</span>
                                        }
                                    }
                                    <span style="color:#555; font-size:0.8rem;">(@p.rate.ToString("0.0"))</span>
                                </div>

                                <div class="mb-2">
                                    @if (p.offer != 0)
                                    {
                                        var discountedPrice = p.price - (p.price * p.offer / 100.0);
                                        <span class="fw-bold" style="color: #003D5B; font-size: 1.2rem;">$@discountedPrice.ToString("0.00")</span>
                                        <span class="text-muted text-decoration-line-through" style="font-size:0.85rem;">$@p.price.ToString("0.00")</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold" style="color: #003D5B; font-size: 1.2rem;">$@p.price.ToString("0.00")</span>
                                    }
                                </div>

                                <p class="text-muted mb-2" style="font-size:0.8rem;">
                                    Delivery: @p.deliveryDate
                                </p>

                                <div class="product-buttons mt-2 d-flex gap-2">
                                    <button type="button" class="btn-cart" data-product-id="@p.productId">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                             class="bi bi-cart" viewBox="0 0 16 16">
                                            <path d="M0 1.5A.5.5 0 0 1 .5 1h1a.5.5 0 0
                                                    1 .485.379L2.89 5H14.5a.5.5 0 0
                                                    1 .49.598l-1.5 7A.5.5 0 0
                                                    1 13 13H4a.5.5 0 0
                                                    1-.491-.408L1.01 2H.5a.5.5
                                                    0 0 1-.5-.5zM3.14 6l1.25
                                                    5h8.22l1.25-5H3.14zM5.5
                                                    12a1 1 0 1 0 0 2 1 1
                                                    0 0 0 0-2zm6 0a1 1
                                                    0 1 0 0 2 1 1
                                                    0 0 0 0-2z" />
                                        </svg>
                                        Add to Cart
                                    </button>

                                    <button type="button" class="btn-fav">❤</button>
                                </div>

                                <!-- Invisible link covering the entire card -->
                                <a asp-controller="Tourist" asp-action="ViewProduct" asp-route-id="@p.productId" class="product-link"></a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
    <script>

            document.addEventListener('DOMContentLoaded', function() {
            // Target the navbar search form directly
            const navbarSearch = document.querySelector('#navbar-search-form');
            const heroSection = document.querySelector('.hero-section');

            if (heroSection && navbarSearch) {
                console.log('Navbar search toggle initialized');

                // Hide initially
                navbarSearch.style.display = 'none';

                function toggleSearchBar() {
                    // Get the bottom position of the hero section
                    const heroBottom = heroSection.offsetTop + heroSection.offsetHeight;

                    // Show search when scrolled past hero section (with small offset)
                    if (window.pageYOffset > heroBottom - 100) {
                        navbarSearch.style.display = 'flex';
                    } else {
                        navbarSearch.style.display = 'none';
                    }
                }

                // Listen for scroll events
                window.addEventListener('scroll', toggleSearchBar);

                // Initial check on page load
                toggleSearchBar();
            } else {
                console.warn('Hero section or navbar search not found');
            }
        });

        // Feature navigation cards functionality
        document.addEventListener('DOMContentLoaded', function() {
            const featureCards = document.querySelectorAll('.feature-nav-card');

            featureCards.forEach(card => {
                card.addEventListener('click', function() {
                    const target = this.getAttribute('data-target');

                    switch(target) {
                        case 'categories':
                            document.getElementById('categories').scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                            break;
                        case 'bestsellers':
                            const bestSellersSection = document.querySelector('.product-section');
                            if (bestSellersSection) {
                                bestSellersSection.scrollIntoView({
                                    behavior: 'smooth',
                                    block: 'start'
                                });
                            }
                            break;
                        case 'newarrivals':
                            const newArrivalsSections = document.querySelectorAll('.product-section');
                            if (newArrivalsSections.length > 1) {
                                newArrivalsSections[1].scrollIntoView({
                                    behavior: 'smooth',
                                    block: 'start'
                                });
                            }
                            break;
                    }
                });
            });
        });

        // Favorite button toggle
        document.querySelectorAll(".btn-fav").forEach(btn => {
            btn.addEventListener("click", function(e) {
                e.preventDefault();
                e.stopPropagation();
                this.classList.toggle("active");
            });
        });

        // Add to cart functionality
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".btn-cart").forEach(btn => {
                btn.addEventListener("click", async (e) => {
                    e.preventDefault();
                    e.stopPropagation();

                    const productId = btn.dataset.productId;

                    try {
                        const response = await fetch("/Tourist/AddToCart", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/x-www-form-urlencoded"
                            },
                            body: `productId=${productId}`
                        });

                        if (response.ok) {
                            btn.textContent = "Added ✓";
                            btn.disabled = true;
                            btn.style.backgroundColor = "#198754";
                            btn.style.color = "white";
                        } else if (response.status === 401) {
                            alert("Please log in first.");
                        } else {
                            alert("This product could not be added to the cart.");
                        }
                    } catch (error) {
                        console.error("Error adding to cart:", error);
                        alert("Something went wrong. Try again later.");
                    }
                });
            });
        });
    </script>

</body>
