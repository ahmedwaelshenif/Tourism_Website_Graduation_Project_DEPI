@model Tourism.ViewModel.PurchaseRestaurantViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #ff6b6b;
            --secondary-color: #4ecdc4;
            --dark-bg: #f7f9fc;
            --text-color: #2d3436;
        }

        body {
            background-color: var(--dark-bg);
            font-family: 'Poppins', sans-serif;
        }

        .booking-card {
            border-radius: 15px;
            background: white;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            border: 2px solid var(--primary-color);
        }

        .info-box {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .book-btn {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background-color: transparent;
            font-weight: 600;
            border-radius: 8px;
            padding: 10px 20px;
            transition: .3s ease;
        }

            .book-btn:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .back-btn {
            border: 2px solid #6c757d;
            color: #6c757d;
            background-color: transparent;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: .3s ease;
        }

            .back-btn:hover {
                background-color: #6c757d;
                color: white;
            }

        .date-input-group {
            position: relative;
        }

        .date-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-color);
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="booking-card p-4">
                    <h2 class="text-center mb-4" style="color: var(--primary-color);">
                        <i class="fas fa-calendar-check me-2"></i>Book Your Table
                    </h2>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Booking Summary -->
                    <div class="info-box">
                        <h5>Booking Summary</h5>
                        <div class="row">
                            <div class="col-6">
                                <strong>Restaurant:</strong><br>
                                <span>@ViewBag.RestaurantName</span>
                            </div>
                            <div class="col-6">
                                <strong>Table Details:</strong><br>
                                <span>@ViewBag.TableDetails</span>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <strong>Number of Guests:</strong><br>
                                <span>@Model.numberOfGuests</span>
                            </div>
                            <div class="col-6">
                                <strong>Total Price:</strong><br>
                                <span class="fw-bold" style="color: var(--primary-color);">@Model.bookingPrice.ToString("C")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Credit Card Form -->
                    <form asp-action="ProcessBooking" asp-controller="Tourist" method="post">
                        <input type="hidden" asp-for="touristId" />
                        <input type="hidden" asp-for="restaurantId" />
                        <input type="hidden" asp-for="tableId" />
                        <input type="hidden" asp-for="tableNumber" />
                        <input type="hidden" asp-for="numberOfGuests" />
                        <input type="hidden" asp-for="bookingPrice" />

                        <h5 class="mb-3">Booking Details</h5>

                        <!-- Date Selection -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label asp-for="date" class="form-label">Select Booking Date</label>
                                <div class="date-input-group">
                                    <input asp-for="date" type="date" class="form-control" required
                                           min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                    <i class="fas fa-calendar-alt date-icon"></i>
                                </div>
                                <span asp-validation-for="date" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Select the date for your table reservation
                                </small>
                            </div>
                        </div>

                        <h5 class="mb-3">Payment Information</h5>

                        <!-- Add CardHolder field -->
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="creditCard.CardHolder" class="form-label">Cardholder Name</label>
                                <input asp-for="creditCard.CardHolder" class="form-control" placeholder="John Doe" required />
                                <span asp-validation-for="creditCard.CardHolder" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="creditCard.CardNumber" class="form-label">Card Number</label>
                                <input asp-for="creditCard.CardNumber" class="form-control" placeholder="1234 5678 9012 3456" required />
                                <span asp-validation-for="creditCard.CardNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6 mb-3">
                                <label asp-for="creditCard.ExpiryDate" class="form-label">Expiry Date (MM/YY)</label>
                                <input asp-for="creditCard.ExpiryDate" class="form-control" placeholder="12/25" required />
                                <span asp-validation-for="creditCard.ExpiryDate" class="text-danger"></span>
                            </div>
                            <div class="col-6 mb-3">
                                <label asp-for="creditCard.CVV" class="form-label">CVV</label>
                                <input asp-for="creditCard.CVV" class="form-control" placeholder="123" required />
                                <span asp-validation-for="creditCard.CVV" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="ViewTables" asp-controller="Tourist" asp-route-restaurantId="@Model.restaurantId" class="back-btn">
                                <i class="fas fa-arrow-left me-1"></i>Back to Tables
                            </a>
                            <button type="submit" class="book-btn">
                                <i class="fas fa-credit-card me-1"></i>Confirm Booking
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Set minimum date to current date
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.querySelector('input[type="date"]');
            const now = new Date();

            // Format to YYYY-MM-DD
            const year = now.getFullYear();
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const day = String(now.getDate()).padStart(2, '0');

            const minDate = `${year}-${month}-${day}`;
            dateInput.min = minDate;

            // Optional: Set a default value (tomorrow)
            const defaultDate = new Date(now.getTime() + 24 * 60 * 60 * 1000);
            const defaultYear = defaultDate.getFullYear();
            const defaultMonth = String(defaultDate.getMonth() + 1).padStart(2, '0');
            const defaultDay = String(defaultDate.getDate()).padStart(2, '0');

            const defaultDateValue = `${defaultYear}-${defaultMonth}-${defaultDay}`;
            dateInput.value = defaultDateValue;
        });
    </script>
</body>
</html>