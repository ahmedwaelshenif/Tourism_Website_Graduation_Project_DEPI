@using Tourism.ViewModel
@model List<ProductViewModel>

@{
    Layout = "EcommerceLayout";
}

<body>

    

    <div class="container-fluid">
        <div class="row">
            <!-- Filter -->
            <div class="col-md-3 p-4">
                <div class="filter-panel">
                    <form asp-controller="Tourist" asp-action="ApplyFilter" method="post">
                        <input type="hidden" name="category" value="@ViewBag.category" />
                        <input type="hidden" name="Search" value="@ViewBag.Search" />

                        <h5>Filter</h5>
                        <label>Min Price ($)</label>
                        <input type="number" class="form-control" name="minPrice" placeholder="0" />
                        <label class="mt-2">Max Price ($)</label>
                        <input type="number" class="form-control" name="maxPrice" placeholder="1000" />
                        <label class="mt-2">Sort By</label>
                        <select class="form-select" name="sort">
                            <option value="">-- None --</option>
                            <option value="low">Price: Low to High</option>
                            <option value="high">Price: High to Low</option>
                        </select>
                        <button type="submit" class="btn btn-primary w-100 mt-3">Apply Filter</button>
                    </form>
                </div>
            </div>

            <!-- Products -->
            <div class="col-md-9 p-4">
                <div class="row g-4">
                    @if (!Model.Any())
                    {
                        <p class="text-center text-muted">No products found.</p>
                    }
                    else
                    {
                        foreach (var p in Model)
                        {
                            <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
                                <div class="product-card p-3 position-relative w-100 d-flex flex-column justify-content-between">

                                    <!-- Offer Badge -->
                                    @if (p.offer != 0)
                                    {
                                        <span class="position-absolute top-0 start-0 bg-warning text-white px-2 py-1 rounded-end fw-bold" style="font-size:0.8rem;">-@p.offer%</span>
                                    }

                                    <!-- Product Image -->
                                    @using (var ms = new MemoryStream())
                                    {
                                        p.UploadedImages[0].CopyTo(ms);
                                        var bytes = ms.ToArray();
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(bytes)" alt="@p.name" class="mb-3" />
                                    }

                                    <!-- Product Name -->
                                    <h3 class="mt-2 mb-2" style="font-size:1rem;">@p.name</h3>

                                    <!-- Rating -->
                                    <div class="rating mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= p.rate)
                                            {
                                                @:<span>&#9733;</span>
                                            }
                                            else
                                            {
                                                @:<span style="color:#ccc;">&#9733;</span>
                                            }
                                        }
                                        <span style="color:#555; font-size:0.8rem;">(@p.rate.ToString("0.0"))</span>
                                    </div>

                                    <!-- Price -->
                                    <div class="mb-2">
                                        @if (p.offer != 0)
                                        {
                                            var discountedPrice = p.price - (p.price * p.offer / 100.0);
                                            <span class="fw-bold" style="color: #003D5B; font-size: 1.2rem;">$@discountedPrice.ToString("0.00")</span>
                                            <span class="text-muted text-decoration-line-through" style="font-size:0.85rem;">$@p.price.ToString("0.00")</span>
                                        }
                                        else
                                        {
                                            <span class="fw-bold" style="color: #003D5B; font-size: 1.2rem;">$@p.price.ToString("0.00")</span>
                                        }
                                    </div>

                                    <p class="text-muted mb-2" style="font-size:0.8rem;">
                                        Delivery:
                                        @if (p.DeliversWithin != 0)
                                        {
                                            @DateTime.Today.AddDays((int)p.DeliversWithin).ToString("yyyy-MM-dd")
                                        }
                                    </p>

                                    <!-- Buttons -->
                                    <div class="product-buttons mt-2">
                                        <button class="btn-cart">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                                <path d="M0 1.5A.5.5 0 0 1 .5 1h1a.5.5 0 0 1 .485.379L2.89 5H14.5a.5.5 0 0 1 .49.598l-1.5 7A.5.5 0 0 1 13 13H4a.5.5 0 0 1-.491-.408L1.01 2H.5a.5.5 0 0 1-.5-.5zM3.14 6l1.25 5h8.22l1.25-5H3.14zM5.5 12a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm6 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                                            </svg>
                                            Add to Cart
                                        </button>
                                        <button class="btn-fav">❤</button>
                                    </div>
                                    <a asp-controller="Tourist" asp-action="ViewProduct" asp-route-id="@p.productId" class="product-link"></a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

  <script>
        document.querySelectorAll(".btn-fav").forEach(btn => {
            btn.addEventListener("click", () => btn.classList.toggle("active"));
        });
    </script>

</body>

