@model IEnumerable<Tourism.ViewModel.MealViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Menu</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #ff6b6b;
            --secondary-color: #4ecdc4;
            --dark-bg: #f7f9fc;
            --text-color: #2d3436;
        }

        body {
            background-color: var(--dark-bg);
            font-family: 'Poppins', sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: white;
            padding: 1rem 2rem;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--primary-color) !important;
            font-size: 1.5rem;
        }

        .menu-card {
            border-radius: 15px;
            background: white;
            transition: transform .3s ease, box-shadow .3s ease, border-color .3s ease;
            border: 2px solid transparent;
            cursor: pointer;
            margin-bottom: 20px;
        }

            .menu-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 28px rgba(255,107,107,0.18);
                border-color: var(--primary-color);
            }

        .meal-img {
            width: 150px;
            height: 120px;
            object-fit: cover;
            border-radius: 12px;
            transition: .3s ease;
        }

        .menu-card:hover .meal-img {
            transform: scale(1.05);
        }

        .meal-name {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--text-color);
        }

        .meal-desc {
            font-size: .95rem;
            color: #555;
        }

        .price-tag {
            font-size: 1.1rem;
            font-weight: bold;
            color: var(--primary-color);
        }

        .back-btn {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background-color: transparent;
            padding: 3px 8px;
            border-radius: 6px;
            text-decoration: none;
            transition: all .3s ease;
            font-weight: 600;
            font-size: 1rem;
        }

            .back-btn:hover {
                background-color: var(--primary-color);
                color: white;
            }
    </style>

</head>

<body>

    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-book-open me-2"></i>Menu
            </a>

            <div class="ms-auto">
                <a class="back-btn" asp-action="ViewTables" asp-controller="Tourist" asp-route-restaurantId="@ViewBag.RestaurantId">Book a Table</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row g-3">
             @if (Model == null || !Model.Any())
        {
                <div class="alert alert-warning text-center w-100 mt-4" style="background-color: transparent; color:dimgrey; border: none;">
                No Meals available at the moment.
                </div>
            }
            else
            {
                @foreach (var m in Model)
                {
                    <div class="menu-card d-flex align-items-center p-3 shadow-sm">

                    <!-- Meal Image -->
                    <img src="@(m.ImageBytes != null
                                                           ? "data:image/jpeg;base64," + Convert.ToBase64String(m.ImageBytes)
                                                           : "/images/default-meal.png")"
                     class="meal-img me-3" />

                    <!-- Meal Text Info -->
                    <div class="flex-grow-1">
                        <div class="meal-name">@m.name</div>
                        <div class="meal-desc">@m.description</div>
                    </div>

                    <!-- Right: Price -->
                    <div class="price-tag me-3">
                       $ @m.price 
                    </div>

                </div>
         }               }
            <div class="ms-auto">
                <a class="back-btn" asp-action="ShowRestaurants" asp-controller="Tourist">Back</a>
            </div>

        </div>
    </div>
</body>
</html>
