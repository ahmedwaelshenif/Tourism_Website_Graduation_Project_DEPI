@{
    Layout = "TouristLayout";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discover Egypt - Top Destinations</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
  <body class="destination-page">
    <!-- Hero Header Section -->
    <section class="destination-hero">
      <img
        src="Photos/Khan_Khalili_Thumbnail.jpg"
        alt="Khan El Khalili"
        class="hero-background"
      />
      <div class="hero-overlay"></div>
        <a href="Destinations/Index" class="back-button">← Back to Destinations</a>
      <div class="hero-content">
        <h1 class="destination-title">Khan El Khalili</h1>
      </div>
    </section>

    <!-- Description Section -->
    <section class="description-section">
      <div class="description-content">
        <h2>About Khan El Khalili</h2>
        <p class="description-text">
          Khan El Khalili is a centuries-old open-air marketplace filled with
          vibrant colors, smells, and sounds. It is the perfect place to
          experience local life, shop for handcrafted souvenirs, antiques,
          spices, perfumes, and jewelry, or relax with a traditional mint tea at
          the iconic El Fishawy café. The narrow alleyways, lantern-lit shops,
          and lively merchants create a truly authentic Egyptian atmosphere.
        </p>
        <p class="description-text"><b>Location:</b> Islamic Cairo, Cairo</p>
      </div>
      <iframe
        class="map-location-btn"
        src="https://maps.google.com/maps?q=30.0478,31.2625&t=&z=15&ie=UTF8&iwloc=&output=embed"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        allowfullscreen
      ></iframe>
    </section>

    <!-- Gallery Section -->
    <section class="gallery-section">
      <h2>Gallery</h2>
      <div class="gallery-grid">
        <div class="gallery-item">
          <img
            src="Photos/KhanKhaliliPic1.jpg"
            alt="Khan El Khalili Gallery 1"
          />
        </div>
        <div class="gallery-item">
          <img
            src="Photos/KhanKhaliliPic2.jpg"
            alt="Khan El Khalili Gallery 2"
          />
        </div>
        <div class="gallery-item">
          <img
            src="Photos/KhanKhaliliPic3.jpg"
            alt="Khan El Khalili Gallery 3"
          />
        </div>
      </div>
    </section>

    <script src="~/js/script.js"></script>
  </body>
</html>
