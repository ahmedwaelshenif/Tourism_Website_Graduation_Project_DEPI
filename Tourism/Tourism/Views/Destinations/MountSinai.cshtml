@{
    Layout = "TouristLayout";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discover Egypt - Top Destinations</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
  <body class="destination-page">
    <section class="destination-hero">
      <img
        src="Photos/Mount_SinaiThumbnail.jpg"
        alt="Mount Sinai"
        class="hero-background"
      />
      <div class="hero-overlay"></div>
        <a href="Destinations/Index" class="back-button">‚Üê Back to Destinations</a>
      <div class="hero-content">
        <h1 class="destination-title">Mount Sinai</h1>
      </div>
    </section>

    <section class="description-section">
      <div class="description-content">
        <h2>About Mount Sinai</h2>
        <p class="description-text"><strong>Location:</strong> South Sinai</p>
        <p class="description-text">
          A sacred site where pilgrims climb before dawn to witness one of the
          most stunning sunrises in the world.
        </p>
        <p class="description-text">
          The nearby St. Catherine's Monastery is home to ancient manuscripts
          and religious treasures.
        </p>
      </div>
      <iframe
        class="map-location-btn"
        src="https://maps.google.com/maps?q=28.5392,33.9753&t=&z=15&ie=UTF8&iwloc=&output=embed"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        allowfullscreen
      ></iframe>
    </section>

    <section class="gallery-section">
      <h2>Gallery</h2>
      <div class="gallery-grid">
        <div class="gallery-item">
          <img src="Photos/Mount-SinaiPic1.webp" alt="Mount Sinai Gallery 1" />
        </div>
        <div class="gallery-item">
          <img src="Photos/MountSinaiPic2.jpg" alt="Mount Sinai Gallery 2" />
        </div>
        <div class="gallery-item">
          <img src="Photos/mount-sinaiPic3.jpg" alt="Mount Sinai Gallery 3" />
        </div>
      </div>
    </section>

    <script src="~/js/script.js"></script>
  </body>
</html>
