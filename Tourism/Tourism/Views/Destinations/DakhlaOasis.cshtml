@{
    Layout = "TouristLayout";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discover Egypt - Top Destinations</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
  <body class="destination-page">
    <section class="destination-hero">
      <img
        src="Photos/Dakhla-OasisThumbnail.jpg"
        alt="Dakhla Oasis"
        class="hero-background"
      />
      <div class="hero-overlay"></div>
        <a href="Destinations/Index" class="back-button">‚Üê Back to Destinations</a>
      <div class="hero-content">
        <h1 class="destination-title">Dakhla Oasis</h1>
      </div>
    </section>

    <section class="description-section">
      <div class="description-content">
        <h2>About Dakhla Oasis</h2>
        <p class="description-text">
          <strong>Location:</strong> Western Desert
        </p>
        <p class="description-text">
          Home to medieval mud-brick villages, hot springs, and palm groves.
        </p>
        <p class="description-text">
          Dakhla is one of Egypt's most enchanting oases, featuring traditional
          architecture, natural thermal springs, and lush date palm gardens that
          create a tranquil escape in the heart of the Western Desert.
        </p>
      </div>
      <iframe
        class="map-location-btn"
        src="https://maps.google.com/maps?q=25.5000,29.0000&t=&z=15&ie=UTF8&iwloc=&output=embed"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        allowfullscreen
      ></iframe>
    </section>

    <section class="gallery-section">
      <h2>Gallery</h2>
      <div class="gallery-grid">
        <div class="gallery-item">
          <img src="Photos/Dakhla-OasisPic1.jpg" alt="Dakhla Oasis Gallery 1" />
        </div>
        <div class="gallery-item">
          <img src="Photos/DakhlaOasisPic2.jpg" alt="Dakhla Oasis Gallery 2" />
        </div>
        <div class="gallery-item">
          <img src="Photos/dakhla-oasisPic3.jpg" alt="Dakhla Oasis Gallery 3" />
        </div>
      </div>
    </section>

    <script src="~/js/script.js"></script>
  </body>
</html>
