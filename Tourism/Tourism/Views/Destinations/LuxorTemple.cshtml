@{
    Layout = "TouristLayout";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discover Egypt - Top Destinations</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
  <body class="destination-page">
    <section class="destination-hero">
      <img
        src="Photos/Luxor_Temple_Thumbnail.webp"
        alt="Luxor Temple"
        class="hero-background"
      />
      <div class="hero-overlay"></div>
        <a href="Destinations/Index" class="back-button">‚Üê Back to Destinations</a>
      <div class="hero-content">
        <h1 class="destination-title">Luxor Temple</h1>
      </div>
    </section>

    <section class="description-section">
      <div class="description-content">
        <h2>About Luxor Temple</h2>
        <p class="description-text">
          <strong>Location:</strong> Luxor City, East Bank
        </p>
        <p class="description-text">
          Luxor Temple is an extraordinary open-air monument built by pharaohs
          such as Amenhotep III and Ramses II. Massive statues, intricate
          carvings, and towering columns line its grand entrance. Unlike most
          temples dedicated to gods, Luxor Temple was built to celebrate
          kingship, making it a unique piece of history.
        </p>
        <p class="description-text">
          When illuminated at night, the temple transforms into a magical scene
          that feels alive with ancient stories.
        </p>
      </div>
      <iframe
        class="map-location-btn"
        src="https://maps.google.com/maps?q=25.6995,32.6390&t=&z=15&ie=UTF8&iwloc=&output=embed"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        allowfullscreen
      ></iframe>
    </section>

    <section class="gallery-section">
      <h2>Gallery</h2>
      <div class="gallery-grid">
        <div class="gallery-item">
          <img src="Photos/LuxorTemplePic1.jpg" alt="Luxor Temple Gallery 1" />
        </div>
        <div class="gallery-item">
          <img src="Photos/LuxorTemplePic2.webp" alt="Luxor Temple Gallery 2" />
        </div>
        <div class="gallery-item">
          <img src="Photos/LuxorTemplePic3.webp" alt="Luxor Temple Gallery 3" />
        </div>
      </div>
    </section>
    <script src="~/js/script.js"></script>
  </body>
</html>
