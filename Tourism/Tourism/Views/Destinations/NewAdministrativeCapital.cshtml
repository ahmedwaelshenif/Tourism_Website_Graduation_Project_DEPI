@{
    Layout = "TouristLayout";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discover Egypt - Top Destinations</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
  <body class="destination-page">
    <section class="destination-hero">
      <img
        src="Photos/NewAdministrativeCapitalThumbnail.jpg"
        alt="New Administrative Capital"
        class="hero-background"
      />
      <div class="hero-overlay"></div>
        <a href="Destinations/Index" class="back-button">‚Üê Back to Destinations</a>
      <div class="hero-content">
        <h1 class="destination-title">New Administrative Capital</h1>
      </div>
    </section>

    <section class="description-section">
      <div class="description-content">
        <h2>About the New Administrative Capital</h2>
        <p class="description-text">
          <strong>Location:</strong> 45 km east of Cairo
        </p>
        <p class="description-text">
          A modern smart city including the Iconic Tower, Africa's largest
          cathedral, and high-tech districts.
        </p>
        <p class="description-text">
          This ambitious urban development represents Egypt's vision for the
          future, featuring advanced infrastructure, sustainable design, and
          cutting-edge technology throughout the city.
        </p>
      </div>
      <iframe
        class="map-location-btn"
        src="https://maps.google.com/maps?q=30.0258,31.7310&t=&z=15&ie=UTF8&iwloc=&output=embed"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        allowfullscreen
      ></iframe>
    </section>

    <section class="gallery-section">
      <h2>Gallery</h2>
      <div class="gallery-grid">
        <div class="gallery-item">
          <img
            src="Photos/NewAdministrativeCapitalPic1.jpg"
            alt="New Administrative Capital Gallery 1"
          />
        </div>
        <div class="gallery-item">
          <img
            src="Photos/NewAdministrativeCapitalPic2.jpeg"
            alt="New Administrative Capital Gallery 2"
          />
        </div>
        <div class="gallery-item">
          <img
            src="Photos/NewAdministrativeCapitalPic3.jpg"
            alt="New Administrative Capital Gallery 3"
          />
        </div>
      </div>
    </section>

    <script src="~/js/script.js"></script>
  </body>
</html>
