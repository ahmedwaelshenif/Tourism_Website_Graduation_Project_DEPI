@{
    Layout = "TouristLayout";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discover Egypt - Top Destinations</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
  <body class="destination-page">
    <!-- Hero Header Section -->
    <section class="destination-hero">
      <img
        src="Photos/grand_egyptian_museum_Thumbnail.jpg"
        alt="Grand Egyptian Museum"
        class="hero-background"
      />
      <div class="hero-overlay"></div>
        <a href="Destinations/Index" class="back-button">← Back to Destinations</a>
      <div class="hero-content">
        <h1 class="destination-title">Grand Egyptian Museum</h1>
      </div>
    </section>

    <!-- Description Section -->
    <section class="description-section">
      <div class="description-content">
        <h2>About the Grand Egyptian Museum</h2>
        <p class="description-text">
          The Grand Egyptian Museum is Egypt’s newest and most ambitious
          cultural landmark, officially opening November 1, 2025, after more
          than two decades of planning and construction. Designed by Ireland’s
          Heneghan Peng Architects, the museum’s architecture echoes the shape
          of the nearby pyramids — a chamfered triangular structure built with
          translucent alabaster stone and frosted glass facades. Spanning nearly
          500,000 square meters, GEM is one of the largest archaeological
          museums in the world and is dedicated entirely to ancient Egyptian
          civilization. Inside, there are 12 main permanent exhibition halls, a
          conservation center, a children’s museum, and educational facilities.
        </p>
        <p class="description-text">
          <b>Location:</b> Giza Plateau, just ~2 km from the Pyramids of Giza,
          Greater Cairo
        </p>
      </div>
      <iframe
        class="map-location-btn"
        src="https://maps.google.com/maps?q=29.9933,31.1172&t=&z=15&ie=UTF8&iwloc=&output=embed"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        allowfullscreen
      ></iframe>
    </section>

    <!-- Gallery Section -->
    <section class="gallery-section">
      <h2>Gallery</h2>
      <div class="gallery-grid">
        <div class="gallery-item">
          <img src="Photos/GEMPic1.jpg" alt="Grand Egyptian Museum Gallery 1" />
        </div>
        <div class="gallery-item">
          <img src="Photos/GEMPic2.jpg" alt="Grand Egyptian Museum Gallery 2" />
        </div>
        <div class="gallery-item">
          <img
            src="Photos/GEMPic3.jpeg"
            alt="Grand Egyptian Museum Gallery 3"
          />
        </div>
      </div>
    </section>

    <script src="~/js/script.js"></script>
  </body>
</html>
