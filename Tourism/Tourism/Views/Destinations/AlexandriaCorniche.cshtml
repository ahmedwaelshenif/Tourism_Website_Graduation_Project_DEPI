@{
    Layout = "TouristLayout";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discover Egypt - Top Destinations</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
  <body class="destination-page">
    <section class="destination-hero">
      <img
        src="Photos/AlexandriaCornicheThumbnail.jpg"
        alt="Alexandria Corniche"
        class="hero-background"
      />
      <div class="hero-overlay"></div>
        <a href="Destinations/Index" class="back-button">‚Üê Back to Destinations</a>
      <div class="hero-content">
        <h1 class="destination-title">Alexandria Corniche</h1>
      </div>
    </section>

    <section class="description-section">
      <div class="description-content">
        <h2>About Alexandria Corniche</h2>
        <p class="description-text"><strong>Location:</strong> Alexandria</p>
        <p class="description-text">
          A Mediterranean coastal walkway with beaches, seafood restaurants, and
          views of ancient and modern Alexandria.
        </p>
        <p class="description-text">
          This iconic promenade stretches along the Mediterranean coast,
          offering a perfect blend of relaxation, culture, and stunning sea
          views that capture the essence of Egypt's second-largest city.
        </p>
      </div>
      <iframe
        class="map-location-btn"
        src="https://maps.google.com/maps?q=31.2144,29.9398&t=&z=15&ie=UTF8&iwloc=&output=embed"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        allowfullscreen
      ></iframe>
    </section>

    <section class="gallery-section">
      <h2>Gallery</h2>
      <div class="gallery-grid">
        <div class="gallery-item">
          <img
            src="Photos/AlexCornichePic1.jpg"
            alt="Alexandria Corniche Gallery 1"
          />
        </div>
        <div class="gallery-item">
          <img
            src="Photos/AlexandriaCornichePic2.jpg"
            alt="Alexandria Corniche Gallery 2"
          />
        </div>
        <div class="gallery-item">
          <img
            src="Photos/alexandriaCornichePic3.jpg"
            alt="Alexandria Corniche Gallery 3"
          />
        </div>
      </div>
    </section>

    <script src="~/js/script.js"></script>
  </body>
</html>
