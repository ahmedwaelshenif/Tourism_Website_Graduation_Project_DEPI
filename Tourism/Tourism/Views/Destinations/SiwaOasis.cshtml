@{
    Layout = "TouristLayout";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discover Egypt - Top Destinations</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
  <body class="destination-page">
    <section class="destination-hero">
      <img
        src="Photos/Siwa-Oasis-Thumbnail.jpg"
        alt="Siwa Oasis"
        class="hero-background"
      />
      <div class="hero-overlay"></div>
        <a href="Destinations/Index" class="back-button">‚Üê Back to Destinations</a>
      <div class="hero-content">
        <h1 class="destination-title">Siwa Oasis</h1>
      </div>
    </section>

    <section class="description-section">
      <div class="description-content">
        <h2>About Siwa Oasis</h2>
        <p class="description-text">
          <strong>Location:</strong> Western Desert, near the Libyan border
        </p>
        <p class="description-text">
          Located in the Western Desert near the Libyan border, Siwa is Egypt's
          most peaceful wellness destination. It offers natural hot springs,
          therapeutic sand baths, magnesium-rich salt lakes, and untouched
          nature.
        </p>
        <p class="description-text">
          Visitors come for healing treatments, meditation retreats, and the
          oasis' traditional mud-brick architecture.
        </p>
      </div>
      <iframe
        class="map-location-btn"
        src="https://maps.google.com/maps?q=29.2028,25.5194&t=&z=15&ie=UTF8&iwloc=&output=embed"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        allowfullscreen
      ></iframe>
    </section>

    <section class="gallery-section">
      <h2>Gallery</h2>
      <div class="gallery-grid">
        <div class="gallery-item">
          <img src="Photos/SiwaOasisPic1.avif" alt="Siwa Oasis Gallery 1" />
        </div>
        <div class="gallery-item">
          <img src="Photos/SiwaOasisPic2.jpg" alt="Siwa Oasis Gallery 2" />
        </div>
        <div class="gallery-item">
          <img src="Photos/SiwaOasisPic3.jpg" alt="Siwa Oasis Gallery 3" />
        </div>
      </div>
    </section>
    <script src="~/js/script.js"></script>
  </body>
</html>
