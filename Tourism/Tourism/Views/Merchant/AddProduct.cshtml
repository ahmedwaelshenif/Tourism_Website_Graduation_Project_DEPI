@using Tourism.ViewModel
@model ProductViewModel

<style>
    :root {
        --eggplant: #614051;
        --eggplant-light: #8B5A7D;
        --eggplant-dark: #3D2938;
        --accent: #C77D9E;
        --bg-light: #F8F5F7;
    }

    body {
        background-color: var(--bg-light);
    }

    .product-form-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 12px rgba(97, 64, 81, 0.15);
        overflow: hidden;
    }

    .product-form-header {
        background: linear-gradient(135deg, var(--eggplant) 0%, var(--eggplant-light) 100%);
        color: white;
        padding: 1.5rem;
        text-align: center;
        border: none;
    }

        .product-form-header h4 {
            margin: 0;
            font-weight: 600;
            font-size: 1.5rem;
        }

    .product-form-body {
        background: white;
        padding: 2rem;
    }

    .form-label {
        color: var(--eggplant-dark);
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }

    .form-control, .form-select {
        border: 2px solid #e8e0e5;
        border-radius: 8px;
        padding: 0.75rem;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--eggplant-light);
            box-shadow: 0 0 0 0.2rem rgba(139, 90, 125, 0.15);
        }

        .form-control::placeholder {
            color: #aaa;
        }

    textarea.form-control {
        resize: vertical;
    }

    .btn-submit {
        background: linear-gradient(135deg, var(--eggplant) 0%, var(--eggplant-light) 100%);
        border: none;
        color: white;
        padding: 0.75rem 2.5rem;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(97, 64, 81, 0.2);
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(97, 64, 81, 0.3);
            background: linear-gradient(135deg, var(--eggplant-dark) 0%, var(--eggplant) 100%);
        }

        .btn-submit i {
            margin-right: 0.5rem;
        }

    .text-danger {
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .file-upload-wrapper {
        position: relative;
    }

        .file-upload-wrapper input[type="file"] {
            border: 2px dashed var(--eggplant-light);
            background-color: var(--bg-light);
            cursor: pointer;
            padding: 1rem;
        }

            .file-upload-wrapper input[type="file"]:hover {
                border-color: var(--eggplant);
                background-color: #f0e8ed;
            }

    .category-select {
        background-color: white;
    }

    .delivery-info {
        color: #666;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card product-form-card">
                <div class="product-form-header">
                    <h4>
                        <i class="bi bi-plus-circle-fill"></i> Add New Product
                    </h4>
                </div>
                <div class="product-form-body">
                    <form method="post" asp-action="AddProduct" asp-controller="Merchant" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="name" class="form-label">
                                <i class="bi bi-tag"></i> Product Name
                            </label>
                            <input asp-for="name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="count" class="form-label">
                                <i class="bi bi-box"></i> Quantity
                            </label>
                            <input asp-for="count" class="form-control" type="number" placeholder="Enter quantity" />
                            <span asp-validation-for="count" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="description" class="form-label">
                                <i class="bi bi-card-text"></i> Description
                            </label>
                            <textarea asp-for="description" class="form-control" rows="4" placeholder="Describe your product in detail"></textarea>
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="price" class="form-label">
                                        <i class="bi bi-currency-dollar"></i> Price
                                    </label>
                                    <input asp-for="price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                    <span asp-validation-for="price" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="offer" class="form-label">
                                        <i class="bi bi-percent"></i> Offer Discount
                                    </label>
                                    <input asp-for="offer" class="form-control" type="number" step="0.01" placeholder="0.00 (optional)" />
                                    <span asp-validation-for="offer" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label asp-for="category" class="form-label">
                                        <i class="bi bi-grid"></i> Category
                                    </label>
                                    <select asp-for="category" class="form-select category-select">
                                        <option value="">-- Select a Category --</option>
                                        <option>Souvenirs</option>
                                        <option>Travel</option>
                                        <option>Beach</option>
                                        <option>Sports</option>
                                        <option>Cosmetics</option>
                                        <option>Clothing</option>
                                        <option>Jewelry</option>
                                        <option>Electronics</option>
                                        <option>Health</option>
                                        <option>Food</option>
                                        <option>Art</option>
                                        <option>Books</option>
                                    </select>
                                    <span asp-validation-for="category" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DeliversWithin" class="form-label">
                                        <i class="bi bi-truck"></i> Delivery (days)
                                    </label>
                                    <input asp-for="DeliversWithin" id="deliveryInput" class="form-control" type="number" min="1" max="30" value="1" placeholder="1" />
                                    <small class="delivery-info">Max 30 days</small>
                                    <span asp-validation-for="DeliversWithin" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group file-upload-wrapper">
                            <label class="form-label">
                                <i class="bi bi-images"></i> Product Images
                            </label>
                            <input type="file" name="UploadedImages" class="form-control" multiple accept="image/*" />
                            <small class="delivery-info">Upload at least 4 images (JPG, PNG, etc.)</small>
                            <span asp-validation-for="UploadedImages" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-submit">
                                <i class="bi bi-plus-circle"></i> Add Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    const deliveryInput = document.getElementById('deliveryInput');

    deliveryInput.addEventListener('input', function() {
        let value = parseInt(this.value);

        if (isNaN(value) || value < 1) {
            this.value = 1;
        } else if (value > 30) {
            this.value = 30;
        }
    });
</script>