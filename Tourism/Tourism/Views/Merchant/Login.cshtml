@using Tourism.ViewModel
@model LoginViewModel

@{
    ViewData["Title"] = "Merchant Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<div class="d-flex justify-content-center align-items-center vh-100"
     style="background: linear-gradient(135deg, #e3f2fd, #fff);">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px; background-color: #ffffff;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Merchant Login</h3>
            <p class="text-muted">Access your business dashboard</p>
        </div>

        <form method="post" asp-action="Login" asp-controller="Merchant">
            <div class="form-floating mb-3">
                <input asp-for="email" class="form-control" placeholder="Email address" />
                <label asp-for="email"><i class="bi bi-envelope-fill me-2"></i>Email address</label>
                <span asp-validation-for="email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="passwordHash" type="password" class="form-control" placeholder="Password" />
                <label asp-for="passwordHash"><i class="bi bi-lock-fill me-2"></i>Password</label>
                <span asp-validation-for="passwordHash" class="text-danger small"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.msg))
            {
                <div class="alert alert-danger py-2 small">@Model.msg</div>
            }

            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
            </button>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">Don’t have an account?</small><br />
            <a asp-controller="Merchant" asp-action="SignUp" class="text-decoration-none fw-semibold">
                Create one here
            </a>
        </div>

        <hr class="my-4" />

        <div class="text-center">
            <small class="text-secondary">© 2025 Alfa Tourism Marketplace</small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
